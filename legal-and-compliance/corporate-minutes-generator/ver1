// ==========================================

// === ãƒ†ã‚¹ãƒˆç”¨ï¼šãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆä¸€è¦§å–å¾—ãƒ†ã‚¹ãƒˆ ===
function testGetDocsList() {
  console.log('===== testGetDocsListé–‹å§‹ =====');

  try {
    // ç›´æ¥getDocsListã‚’å‘¼ã³å‡ºã—ã¦ãƒ†ã‚¹ãƒˆ
    const docs = getDocsList();

    console.log('å–å¾—çµæœ:');
    console.log('- ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆæ•°:', docs.length);
    console.log('- ãƒ‡ãƒ¼ã‚¿å‹:', typeof docs);
    console.log('- é…åˆ—ã‹ã©ã†ã‹:', Array.isArray(docs));

    if (docs.length > 0) {
      console.log('æœ€åˆã®ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆ:', JSON.stringify(docs[0]));
    }

    return {
      success: true,
      count: docs.length,
      docs: docs,
      message: `${docs.length}ä»¶ã®ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã‚’å–å¾—ã—ã¾ã—ãŸ`
    };

  } catch (error) {
    console.error('testGetDocsList ã‚¨ãƒ©ãƒ¼:', error);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === ãƒ†ã‚¹ãƒˆç”¨ï¼šæ–‡å­—åˆ—ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãƒ†ã‚¹ãƒˆ ===
function testSimpleString(str) {
  console.log('testSimpleString received:', str);
  console.log('Type:', typeof str);
  console.log('Value:', str);
  return {
    success: true,
    received: str,
    type: typeof str,
    length: str ? str.length : 0
  };
}

// === ãƒ†ã‚¹ãƒˆç”¨ï¼šè¤‡æ•°ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãƒ†ã‚¹ãƒˆ ===
function testMultipleParams(param1, param2, param3, param4) {
  console.log('testMultipleParams received:');
  console.log('- param1:', param1, 'type:', typeof param1);
  console.log('- param2:', param2, 'type:', typeof param2);
  console.log('- param3:', param3, 'type:', typeof param3);
  console.log('- param4:', param4, 'type:', typeof param4);

  return {
    success: true,
    params: {
      param1: param1,
      param2: param2,
      param3: param3,
      param4: param4
    }
  };
}

// === è­°æ¡ˆè¿½åŠ ï¼ˆæ‹¡å¼µç‰ˆï¼‰ ===
function addMotionExtended(params) {
  console.log('addMotionExtended called with params:', JSON.stringify(params));

  try {
    if (!params || !params.docId || !params.motionNumber || !params.title || !params.inputHtml) {
      throw new Error('å¿…é ˆãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãŒä¸è¶³ã—ã¦ã„ã¾ã™');
    }

    const {
      docId,
      motionNumber,
      title,
      inputHtml,
      presenter,
      resolutionResult,
      votingDetails,
      specialInterest,
      conditions,
      hasAttachment,
      attachmentMemo,
      useAI
    } = params;

    // è­°æ¡ˆç•ªå·ã®é‡è¤‡ãƒã‚§ãƒƒã‚¯
    if (isMotionNumberDuplicate(docId, motionNumber)) {
      throw new Error(`è­°æ¡ˆç•ªå·${motionNumber}ã¯æ—¢ã«ä½¿ç”¨ã•ã‚Œã¦ã„ã¾ã™`);
    }

    // AIæ•´å½¢å‡¦ç†
    let generatedText = inputHtml;
    if (useAI) {
      // æ±ºè­°æƒ…å ±ã‚’å«ã‚ãŸæ•´å½¢ï¼ˆè­°æ¡ˆæœ¬æ–‡ã¨æ±ºè­°æƒ…å ±ã‚’è‡ªç„¶ãªå½¢ã§çµ±åˆï¼‰
      const motionContext = {
        content: inputHtml,
        title: title,
        presenter: presenter || 'è­°é•·',
        resolutionResult: resolutionResult || 'å…¨å“¡ä¸€è‡´æ‰¿èª',
        votingDetails: votingDetails,
        specialInterest: specialInterest,
        conditions: conditions
      };
      generatedText = formatMotionWithContext(motionContext);
    }

    // ã‚¹ãƒ—ãƒ¬ãƒƒãƒ‰ã‚·ãƒ¼ãƒˆã«ä¿å­˜ï¼ˆæ‹¡å¼µã‚«ãƒ©ãƒ ã‚’è¿½åŠ ï¼‰
    const ss = getSpreadsheet();
    const motionsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);

    if (!motionsSheet) {
      throw new Error('Motionsã‚·ãƒ¼ãƒˆãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
    }

    motionsSheet.appendRow([
      docId,
      motionNumber,
      title,
      inputHtml,
      generatedText,
      hasAttachment ? 'æœ‰' : 'ç„¡',
      attachmentMemo || '',
      new Date(),
      Session.getActiveUser().getEmail(),
      presenter || '',
      resolutionResult || 'å…¨å“¡ä¸€è‡´æ‰¿èª',
      votingDetails || '',
      specialInterest || '',
      conditions || ''
    ]);

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã«åæ˜ 
    updateMotionsBlockExtended(docId);

    // ç›£æŸ»ãƒ­ã‚°
    addAuditLog('ADD_MOTION', docId, `è­°æ¡ˆè¿½åŠ : ${motionNumber} - ${title} (${resolutionResult})`, true);

    return {
      success: true,
      message: `è­°æ¡ˆç¬¬${motionNumber}å·ã‚’è¿½åŠ ã—ã¾ã—ãŸ`,
      generatedText: generatedText
    };

  } catch (error) {
    console.error('è­°æ¡ˆè¿½åŠ ã‚¨ãƒ©ãƒ¼:', error);
    const docIdForLog = params?.docId || null;
    addAuditLog('ADD_MOTION_ERROR', docIdForLog, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === è­°æ¡ˆè¿½åŠ ï¼ˆå€‹åˆ¥ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã§å—ã‘å–ã‚‹ï¼‰ ===
function addMotionDirect(docId, motionNumber, title, inputHtml, hasAttachment, attachmentMemo, useAI) {
  console.log('addMotionDirect called');
  console.log('- docId:', docId);
  console.log('- motionNumber:', motionNumber);
  console.log('- title:', title);
  console.log('- inputHtml:', inputHtml);
  console.log('- hasAttachment:', hasAttachment);
  console.log('- attachmentMemo:', attachmentMemo);
  console.log('- useAI:', useAI);

  // ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã«å†æ§‹æˆ
  const params = {
    docId: docId,
    motionNumber: motionNumber,
    title: title,
    inputHtml: inputHtml,
    hasAttachment: hasAttachment,
    attachmentMemo: attachmentMemo,
    useAI: useAI
  };

  // æ—¢å­˜ã®é–¢æ•°ã‚’å‘¼ã³å‡ºã™
  return addMotion(params);
}

// === ä¼šè­°çµ‚äº†å¾Œè­°æ¡ˆè¿½åŠ  ===
function addPostMeetingMotion(data) {
  try {
    console.log('addPostMeetingMotion called with:', JSON.stringify(data));

    if (!data || !data.docId || !data.motionNumber || !data.title) {
      throw new Error('å¿…é ˆãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãŒä¸è¶³ã—ã¦ã„ã¾ã™');
    }

    const {
      docId,
      motionNumber,
      title,
      content,
      attendingOfficers,
      absentOfficers,
      presenter,
      resolutionResult,
      votingDetails,
      specialInterest,
      conditions
    } = data;

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã‚’å–å¾—
    const doc = DocumentApp.openById(docId);
    const body = doc.getBody();

    // è­°æ¡ˆç•ªå·ã®é‡è¤‡ãƒã‚§ãƒƒã‚¯
    if (isMotionNumberDuplicate(docId, motionNumber)) {
      // æ—¢å­˜ã®è­°æ¡ˆã‚’æ›´æ–°ã™ã‚‹
      updateExistingMotion(docId, motionNumber, data);
    } else {
      // æ–°ã—ã„è­°æ¡ˆã¨ã—ã¦è¿½åŠ 
      const motionText = formatPostMeetingMotion(data);

      // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã«è­°æ¡ˆã‚’è¿½åŠ 
      insertMotionToDocument(doc, motionText, motionNumber);

      // å‡ºå¸­è€…æƒ…å ±ã‚’æ›´æ–°
      updateAttendanceInfo(doc, attendingOfficers, absentOfficers);
    }

    // æ±ºè­°ä¸€è¦§è¡¨ã‚’æ›´æ–°
    updateApprovalTable(doc);

    // ãƒ‡ãƒ¼ã‚¿ãƒ™ãƒ¼ã‚¹ã«è¨˜éŒ²
    const motionSheet = getSpreadsheet().getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);
    motionSheet.appendRow([
      docId,
      motionNumber,
      title,
      content,
      presenter,
      resolutionResult,
      votingDetails,
      specialInterest,
      conditions,
      new Date(),
      'ä¼šè­°çµ‚äº†å¾Œè¿½è¨˜'
    ]);

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã®æ›´æ–°æ—¥æ™‚ã‚’è¨˜éŒ²
    updateDocumentLastModified(docId);

    // ç›£æŸ»ãƒ­ã‚°è¨˜éŒ²
    addAuditLog('POST_MEETING_MOTION_ADD', docId, {
      motionNumber: motionNumber,
      title: title,
      resolutionResult: resolutionResult
    });

    return {
      success: true,
      message: `è­°æ¡ˆ${motionNumber}ã€Œ${title}ã€ã‚’è¿½è¨˜ã—ã¾ã—ãŸ`
    };

  } catch (error) {
    console.error('addPostMeetingMotion error:', error);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === ä¼šè­°çµ‚äº†å¾Œè­°æ¡ˆã®ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆ ===
function formatPostMeetingMotion(data) {
  let text = `ç¬¬${data.motionNumber}å·è­°æ¡ˆã€€${data.title}\n\n`;

  if (data.presenter) {
    text += `ã€ææ¡ˆè€…ã€‘\n${data.presenter}\n\n`;
  }

  text += `ã€è­°æ¡ˆå†…å®¹ã€‘\n${data.content}\n\n`;

  text += `ã€æ±ºè­°çµæœã€‘\nè­°é•·ãŒè­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€${data.resolutionResult}ã—ãŸã€‚\n`;
  if (data.votingDetails) {
    text += `ï¼ˆ${data.votingDetails}ï¼‰\n`;
  }
  text += '\n';

  if (data.specialInterest) {
    text += `ã€ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚äººã€‘\n${data.specialInterest}\n\n`;
  }

  if (data.conditions) {
    text += `ã€ä»˜å¸¯æ¡ä»¶ãƒ»ç•™æ„äº‹é …ã€‘\n${data.conditions}\n\n`;
  }

  return text;
}

// === å‡ºå¸­è€…æƒ…å ±ã®æ›´æ–° ===
function updateAttendanceInfo(doc, attendingOfficers, absentOfficers) {
  const body = doc.getBody();
  const text = body.getText();

  // å‡ºå¸­è€…ã®ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ã‚’ç½®æ›
  const attendingPlaceholder = '{{ATTENDING_OFFICERS}}';
  const absentPlaceholder = '{{ABSENT_OFFICERS}}';

  if (text.includes(attendingPlaceholder)) {
    body.replaceText(attendingPlaceholder, attendingOfficers || '');
  }

  if (text.includes(absentPlaceholder)) {
    body.replaceText(absentPlaceholder, absentOfficers || '');
  }
}

// === æ—¢å­˜è­°æ¡ˆã®æ›´æ–° ===
function updateExistingMotion(docId, motionNumber, data) {
  const doc = DocumentApp.openById(docId);
  const body = doc.getBody();

  // æ—¢å­˜ã®è­°æ¡ˆã‚’æ¢ã—ã¦æ›´æ–°
  const searchPattern = `ç¬¬${motionNumber}å·è­°æ¡ˆ`;
  const foundElement = body.findText(searchPattern);

  if (foundElement) {
    // æ—¢å­˜ã®è­°æ¡ˆã‚’æ›´æ–°ãƒ­ã‚¸ãƒƒã‚¯
    // ï¼ˆå®Ÿè£…ã®è©³ç´°ã¯è¦ä»¶ã«å¿œã˜ã¦èª¿æ•´ï¼‰
    console.log('æ—¢å­˜è­°æ¡ˆã‚’æ›´æ–°:', motionNumber);
  }
}

// === æ¬¡ã®è­°æ¡ˆç•ªå·ã‚’å–å¾— ===
function getNextMotionNumber(docId) {
  try {
    const motions = getMotionsList(docId);
    if (!motions || motions.length === 0) {
      return 1;
    }

    let maxNumber = 0;
    motions.forEach(motion => {
      const num = parseInt(motion.motionNumber);
      if (num > maxNumber) {
        maxNumber = num;
      }
    });

    return maxNumber + 1;
  } catch (error) {
    console.error('getNextMotionNumber error:', error);
    return 1;
  }
}

// === è­°æ¡ˆè¿½åŠ ï¼ˆJSONæ–‡å­—åˆ—ã§å—ã‘å–ã‚‹ï¼‰ ===
function addMotionJSON(jsonString) {
  try {
    console.log('addMotionJSON called with:', jsonString);
    console.log('Type of jsonString:', typeof jsonString);

    // JSONæ–‡å­—åˆ—ã‚’ãƒ‘ãƒ¼ã‚¹
    const params = JSON.parse(jsonString);

    console.log('Parsed params:', params);

    return addMotion(params);
  } catch (error) {
    console.error('JSONãƒ‘ãƒ¼ã‚¹ã‚¨ãƒ©ãƒ¼:', error);
    return {
      success: false,
      error: 'ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã®è§£æã«å¤±æ•—ã—ã¾ã—ãŸ: ' + error.toString()
    };
  }
}

// === è­°æ¡ˆè¿½åŠ ï¼ˆå†…éƒ¨å‡¦ç†ï¼‰ ===
function addMotion(params) {
  try {
    console.log('addMotion called');
    console.log('Type of params:', typeof params);
    console.log('params:', params);
    console.log('params stringified:', JSON.stringify(params));
    console.log('params keys:', params ? Object.keys(params) : 'null');

    if (!params) {
      throw new Error('ãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ãŒæŒ‡å®šã•ã‚Œã¦ã„ã¾ã›ã‚“');
    }

    // ãƒ‡ã‚¹ãƒˆãƒ©ã‚¯ãƒãƒ£ãƒªãƒ³ã‚°ã‚’é¿ã‘ã¦å€‹åˆ¥ã«å–å¾—
    const docId = params.docId;
    const motionNumber = params.motionNumber;
    const title = params.title;
    const inputHtml = params.inputHtml;
    const hasAttachment = params.hasAttachment;
    const attachmentMemo = params.attachmentMemo;
    const useAI = params.useAI;

    console.log('Extracted parameters:');
    console.log('- docId:', docId);
    console.log('- motionNumber:', motionNumber);
    console.log('- title:', title);
    console.log('- inputHtml length:', inputHtml ? inputHtml.length : 'null');
    console.log('- hasAttachment:', hasAttachment);
    console.log('- attachmentMemo:', attachmentMemo);
    console.log('- useAI:', useAI);

    // å¿…é ˆãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã®ãƒã‚§ãƒƒã‚¯
    if (!docId) {
      throw new Error('ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆIDãŒæŒ‡å®šã•ã‚Œã¦ã„ã¾ã›ã‚“');
    }
    if (!motionNumber) {
      throw new Error('è­°æ¡ˆç•ªå·ãŒæŒ‡å®šã•ã‚Œã¦ã„ã¾ã›ã‚“');
    }
    if (!title) {
      throw new Error('è­°æ¡ˆã‚¿ã‚¤ãƒˆãƒ«ãŒæŒ‡å®šã•ã‚Œã¦ã„ã¾ã›ã‚“');
    }
    if (!inputHtml) {
      throw new Error('è­°æ¡ˆå†…å®¹ãŒæŒ‡å®šã•ã‚Œã¦ã„ã¾ã›ã‚“');
    }

    // è­°æ¡ˆç•ªå·ã®é‡è¤‡ãƒã‚§ãƒƒã‚¯
    if (isMotionNumberDuplicate(docId, motionNumber)) {
      throw new Error(`è­°æ¡ˆç•ªå·${motionNumber}ã¯æ—¢ã«ä½¿ç”¨ã•ã‚Œã¦ã„ã¾ã™`);
    }

    // AIæ•´å½¢å‡¦ç†
    let generatedText = inputHtml;
    if (useAI) {
      generatedText = formatMotionWithAI(inputHtml, title);
    }

    // ã‚¹ãƒ—ãƒ¬ãƒƒãƒ‰ã‚·ãƒ¼ãƒˆã«ä¿å­˜
    const ss = getSpreadsheet();
    const motionsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);

    if (!motionsSheet) {
      throw new Error('Motionsã‚·ãƒ¼ãƒˆãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
    }

    motionsSheet.appendRow([
      docId,
      motionNumber,
      title,
      inputHtml,
      generatedText,
      hasAttachment ? 'æœ‰' : 'ç„¡',
      attachmentMemo || '',
      new Date(),
      Session.getActiveUser().getEmail()
    ]);

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã«åæ˜ 
    updateMotionsBlock(docId);

    // ç›£æŸ»ãƒ­ã‚°
    addAuditLog('ADD_MOTION', docId, `è­°æ¡ˆè¿½åŠ : ${motionNumber} - ${title}`, true);

    return {
      success: true,
      message: `è­°æ¡ˆç¬¬${motionNumber}å·ã‚’è¿½åŠ ã—ã¾ã—ãŸ`,
      generatedText: generatedText
    };

  } catch (error) {
    console.error('è­°æ¡ˆè¿½åŠ ã‚¨ãƒ©ãƒ¼:', error);
    const docIdForLog = params?.docId || null;
    addAuditLog('ADD_MOTION_ERROR', docIdForLog, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === æ‹¡å¼µç‰ˆè­°æ¡ˆãƒ–ãƒ­ãƒƒã‚¯æ›´æ–° ===
function updateMotionsBlockExtended(docId) {
  try {
    const doc = DocumentApp.openById(docId);
    const body = doc.getBody();

    // è­°æ¡ˆãƒ‡ãƒ¼ã‚¿å–å¾—
    const ss = getSpreadsheet();
    const motionsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);

    if (!motionsSheet || motionsSheet.getLastRow() <= 1) {
      return;
    }

    const data = motionsSheet.getDataRange().getValues();

    // è©²å½“ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã®è­°æ¡ˆã‚’æŠ½å‡º
    const motions = [];
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] === docId) {
        motions.push({
          number: data[i][1],
          title: data[i][2],
          content: data[i][4] || data[i][3], // AIæ•´å½¢å¾Œã®ãƒ†ã‚­ã‚¹ãƒˆã€ãªã‘ã‚Œã°å…ƒã®ãƒ†ã‚­ã‚¹ãƒˆ
          presenter: data[i][9] || '',
          resolutionResult: data[i][10] || 'å…¨å“¡ä¸€è‡´æ‰¿èª',
          votingDetails: data[i][11] || '',
          specialInterest: data[i][12] || '',
          conditions: data[i][13] || ''
        });
      }
    }

    // è­°æ¡ˆãƒ–ãƒ­ãƒƒã‚¯ã‚’æ§‹ç¯‰
    let motionsContent = '';

    if (motions.length > 0) {
      motions.sort((a, b) => {
        const numA = parseInt(String(a.number).replace(/[^0-9]/g, ''));
        const numB = parseInt(String(b.number).replace(/[^0-9]/g, ''));
        return numA - numB;
      });

      motions.forEach((motion, index) => {
        if (index > 0) {
          motionsContent += '\n\n';
        }

        motionsContent += `ç¬¬${motion.number}å·è­°æ¡ˆã€€${motion.title}\n\n`;

        // èª¬æ˜è€…ã®è¨˜è¼‰ï¼ˆè­°é•·ã¨åŒã˜ã‹ãƒã‚§ãƒƒã‚¯ï¼‰
        if (motion.presenter) {
          const chairInfo = getChairFromDocument(docId);
          if (chairInfo && isChairAndPresenterSame(chairInfo, motion.presenter)) {
            motionsContent += `è­°é•·ãŸã‚‹${motion.presenter}ã‹ã‚‰æ¬¡ã®è­°æ¡ˆã«ã¤ã„ã¦èª¬æ˜ãŒãªã•ã‚ŒãŸã€‚\n\n`;
          } else {
            motionsContent += `è­°é•·ã®æŒ‡åã«ã‚ˆã‚Šã€${motion.presenter}ã‹ã‚‰æ¬¡ã®è­°æ¡ˆã«ã¤ã„ã¦èª¬æ˜ãŒãªã•ã‚ŒãŸã€‚\n\n`;
          }
        }

        // è­°æ¡ˆå†…å®¹ï¼ˆAIæ•´å½¢æ¸ˆã¿ã¾ãŸã¯å…ƒã®ãƒ†ã‚­ã‚¹ãƒˆï¼‰
        motionsContent += `${motion.content}\n`;

        // æ±ºè­°çµæœã‚’è‡ªç„¶ãªæ–‡ç« ã§è¨˜è¼‰
        if (motion.resolutionResult) {
          motionsContent += '\n';

          if (motion.resolutionResult === 'å…¨å“¡ä¸€è‡´æ‰¿èª' || motion.resolutionResult === 'å…¨å“¡ä¸€è‡´ã§æ‰¿èª') {
            motionsContent += 'è­°é•·ãŒæœ¬è­°æ¡ˆã‚’è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€å‡ºå¸­å–ç· å½¹å…¨å“¡ç•°è­°ãªãã€ã“ã‚Œã‚’æ‰¿èªå¯æ±ºã—ãŸã€‚';
          } else if (motion.resolutionResult === 'è³›æˆå¤šæ•°æ‰¿èª' || motion.resolutionResult === 'è³›æˆå¤šæ•°ã§æ‰¿èª') {
            motionsContent += 'è­°é•·ãŒæœ¬è­°æ¡ˆã‚’è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€è³›æˆå¤šæ•°ã‚’ã‚‚ã£ã¦ã“ã‚Œã‚’æ‰¿èªå¯æ±ºã—ãŸ';
            if (motion.votingDetails) {
              motionsContent += `ï¼ˆ${motion.votingDetails}ï¼‰`;
            }
            motionsContent += 'ã€‚';
          } else if (motion.resolutionResult === 'ç¶™ç¶šå¯©è­°') {
            motionsContent += 'æœ¬è­°æ¡ˆã«ã¤ã„ã¦ã¯ã€ã•ã‚‰ã«æ¤œè¨ã‚’è¦ã™ã‚‹ãŸã‚ã€ç¶™ç¶šå¯©è­°ã¨ã™ã‚‹ã“ã¨ã¨ã—ãŸã€‚';
          } else if (motion.resolutionResult === 'å¦æ±º') {
            motionsContent += 'è­°é•·ãŒæœ¬è­°æ¡ˆã‚’è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€è³›æˆå°‘æ•°ã«ã‚ˆã‚Šå¦æ±ºã•ã‚ŒãŸã€‚';
          } else if (motion.resolutionResult === 'å ±å‘Šäº‹é …') {
            motionsContent += 'æœ¬ä»¶ã¯å ±å‘Šäº‹é …ã¨ã—ã¦èª¬æ˜ãŒãªã•ã‚Œã€å‡ºå¸­å–ç· å½¹ã¯ã“ã‚Œã‚’äº†æ‰¿ã—ãŸã€‚';
          } else {
            motionsContent += `è­°é•·ãŒæœ¬è­°æ¡ˆã‚’è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€${motion.resolutionResult}ã€‚`;
          }
        }

        // ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚äººãŒã„ã‚‹å ´åˆ
        if (motion.specialInterest && motion.specialInterest !== 'ãªã—' && motion.specialInterest !== '') {
          motionsContent += `\nãªãŠã€${motion.specialInterest}ã¯ã€æœ¬è­°æ¡ˆã«ã¤ã„ã¦ç‰¹åˆ¥ã®åˆ©å®³é–¢ä¿‚ã‚’æœ‰ã™ã‚‹ãŸã‚ã€ãã®å¯©è­°ãŠã‚ˆã³æ±ºè­°ã«å‚åŠ ã—ãªã‹ã£ãŸã€‚`;
        }

        // ä»˜å¸¯æ¡ä»¶ãŒã‚ã‚‹å ´åˆ
        if (motion.conditions && motion.conditions !== 'ãªã—' && motion.conditions !== '') {
          motionsContent += `\nã¾ãŸã€æœ¬è­°æ¡ˆã®å®Ÿæ–½ã«ã‚ãŸã£ã¦ã¯ã€${motion.conditions}ã“ã¨ãŒä»˜å¸¯æ¡ä»¶ã¨ã—ã¦æ±ºè­°ã•ã‚ŒãŸã€‚`;
        }
      });
    }

    // è­°æ¡ˆãƒ–ãƒ­ãƒƒã‚¯ãƒãƒ¼ã‚«ãƒ¼ã‚’æ¢ã™
    const MOTION_START_MARKER = 'ã€è­°æ¡ˆé–‹å§‹ã€‘';
    const MOTION_END_MARKER = 'ã€è­°æ¡ˆçµ‚äº†ã€‘';
    const MOTION_PLACEHOLDER = '{{MOTIONS_BLOCK}}';

    const paragraphs = body.getParagraphs();
    let motionSectionFound = false;
    let startIndex = -1;
    let endIndex = -1;
    let placeholderIndex = -1;

    // ãƒãƒ¼ã‚«ãƒ¼ã¾ãŸã¯ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ã‚’æ¢ã™
    for (let i = 0; i < paragraphs.length; i++) {
      const text = paragraphs[i].getText();

      if (text.includes(MOTION_START_MARKER)) {
        startIndex = i;
      } else if (text.includes(MOTION_END_MARKER)) {
        endIndex = i;
      } else if (text.includes(MOTION_PLACEHOLDER)) {
        placeholderIndex = i;
      }
    }

    // æ—¢å­˜ã®è­°æ¡ˆã‚»ã‚¯ã‚·ãƒ§ãƒ³ãŒã‚ã‚‹å ´åˆï¼ˆãƒãƒ¼ã‚«ãƒ¼ã§å›²ã¾ã‚Œã¦ã„ã‚‹ï¼‰
    if (startIndex >= 0 && endIndex >= 0 && startIndex < endIndex) {
      // æ—¢å­˜ã®è­°æ¡ˆç•ªå·ã‚’åé›†
      const existingNumbers = new Set();
      for (let i = startIndex + 1; i < endIndex; i++) {
        const text = paragraphs[i].getText();
        const match = text.match(/ç¬¬(\d+)å·è­°æ¡ˆ/);
        if (match) {
          existingNumbers.add(parseInt(match[1]));
        }
      }

      // æ–°ã—ã„è­°æ¡ˆã ã‘ã‚’ãƒ•ã‚£ãƒ«ã‚¿
      const newMotions = motions.filter(m => {
        const num = parseInt(String(m.number).replace(/[^0-9]/g, ''));
        return !existingNumbers.has(num);
      });

      if (newMotions.length > 0) {
        // æ–°ã—ã„è­°æ¡ˆã®ãƒ†ã‚­ã‚¹ãƒˆã‚’ç”Ÿæˆ
        let newMotionsContent = '';
        const hasExisting = existingNumbers.size > 0;

        newMotions.sort((a, b) => {
          const numA = parseInt(String(a.number).replace(/[^0-9]/g, ''));
          const numB = parseInt(String(b.number).replace(/[^0-9]/g, ''));
          return numA - numB;
        });

        newMotions.forEach((motion, index) => {
          // æ—¢å­˜è­°æ¡ˆãŒã‚ã‚‹å ´åˆã¯åŒºåˆ‡ã‚Šã‚’è¿½åŠ 
          if (hasExisting || index > 0) {
            newMotionsContent += '\n---\n\n';
          }
          newMotionsContent += `ç¬¬${motion.number}å·è­°æ¡ˆã€€${motion.title}\n`;
          if (motion.presenter) {
            newMotionsContent += `è­°é•·ã®æŒ‡åã«ã‚ˆã‚Šã€${motion.presenter}ã‹ã‚‰èª¬æ˜ãŒãªã•ã‚ŒãŸã€‚\n`;
          }
          newMotionsContent += `${motion.content}\n`;
          if (motion.specialInterest) {
            newMotionsContent += `\nã€ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚äººã€‘\n${motion.specialInterest}\næœ¬è­°æ¡ˆã®è­°æ±ºã«ã¯å‚åŠ ã—ãªã‹ã£ãŸã€‚\n`;
          }
          newMotionsContent += `\nã€æ±ºè­°ã€‘\n`;
          newMotionsContent += `è­°é•·ãŒè­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€${motion.resolutionResult}ã—ãŸã€‚`;
          if (motion.votingDetails) {
            newMotionsContent += `\nï¼ˆ${motion.votingDetails}ï¼‰`;
          }
          if (motion.conditions) {
            newMotionsContent += `\n\nã€ä»˜å¸¯æ¡ä»¶ã€‘\n${motion.conditions}`;
          }
        });

        // çµ‚äº†ãƒãƒ¼ã‚«ãƒ¼ã®ç›´å‰ã«æ–°ã—ã„è­°æ¡ˆã‚’æŒ¿å…¥
        const insertIndex = body.getChildIndex(paragraphs[endIndex]);

        // æ—¢å­˜ãƒ†ã‚­ã‚¹ãƒˆã®ã‚¹ã‚¿ã‚¤ãƒ«ã‚’å–å¾—ï¼ˆæœ€åˆã®è­°æ¡ˆæ®µè½ã‹ã‚‰ï¼‰
        let templateStyle = null;
        for (let i = startIndex + 1; i < endIndex; i++) {
          const para = paragraphs[i];
          if (para.getText().trim()) {
            // ãƒ•ã‚©ãƒ³ãƒˆãƒ•ã‚¡ãƒŸãƒªãƒ¼ã€ã‚µã‚¤ã‚ºã€è‰²ãªã©ã‚’ä¿æŒ
            const text = para.editAsText();
            templateStyle = {
              fontSize: text.getFontSize(),
              fontFamily: text.getFontFamily(),
              foregroundColor: text.getForegroundColor()
            };
            break;
          }
        }

        const lines = newMotionsContent.split('\n');
        // é †ç•ªé€šã‚Šã«æŒ¿å…¥ï¼ˆinsertIndexã®ä½ç½®ã«é †ç•ªã«æŒ¿å…¥ï¼‰
        lines.forEach((line, idx) => {
          const newPara = body.insertParagraph(insertIndex + idx, line);
          // ãƒ†ãƒ³ãƒ—ãƒ¬ãƒ¼ãƒˆã®ã‚¹ã‚¿ã‚¤ãƒ«ã‚’é©ç”¨
          if (templateStyle && templateStyle.fontSize) {
            const text = newPara.editAsText();
            if (templateStyle.fontSize) text.setFontSize(templateStyle.fontSize);
            if (templateStyle.fontFamily) text.setFontFamily(templateStyle.fontFamily);
            if (templateStyle.foregroundColor) text.setForegroundColor(templateStyle.foregroundColor);
          }
        });
      }
      motionSectionFound = true;

    // ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ãŒã‚ã‚‹å ´åˆ
    } else if (placeholderIndex >= 0) {
      // ãƒ—ãƒ¬ãƒ¼ã‚¹ãƒ›ãƒ«ãƒ€ãƒ¼ã‚’è­°æ¡ˆã‚»ã‚¯ã‚·ãƒ§ãƒ³ã«ç½®æ›
      paragraphs[placeholderIndex].setText(MOTION_START_MARKER);

      if (motionsContent) {
        const insertIndex = body.getChildIndex(paragraphs[placeholderIndex]) + 1;
        const lines = motionsContent.split('\n');
        lines.forEach((line, idx) => {
          body.insertParagraph(insertIndex + idx, line);
        });
        body.insertParagraph(insertIndex + lines.length, MOTION_END_MARKER);
      } else {
        body.insertParagraph(body.getChildIndex(paragraphs[placeholderIndex]) + 1, MOTION_END_MARKER);
      }
      motionSectionFound = true;

    // ã€Œè­°äº‹ã€ã¾ãŸã¯ã€Œè­°æ¡ˆã€ã¨ã„ã†è¦‹å‡ºã—ã‚’æ¢ã™
    } else {
      for (let i = 0; i < paragraphs.length; i++) {
        const text = paragraphs[i].getText();
        if (text.match(/^[\d\.\s]*è­°[äº‹æ¡ˆ]/)) {
          // è¦‹å‡ºã—ã®æ¬¡ã®è¡Œã«ãƒãƒ¼ã‚«ãƒ¼ã‚’è¿½åŠ 
          const insertIndex = body.getChildIndex(paragraphs[i]) + 1;
          body.insertParagraph(insertIndex, MOTION_START_MARKER);

          if (motionsContent) {
            const lines = motionsContent.split('\n');
            lines.forEach((line, idx) => {
              body.insertParagraph(insertIndex + 1 + idx, line);
            });
            body.insertParagraph(insertIndex + 1 + lines.length, MOTION_END_MARKER);
          } else {
            body.insertParagraph(insertIndex + 1, MOTION_END_MARKER);
          }
          motionSectionFound = true;
          break;
        }
      }
    }

    // ã©ã“ã«ã‚‚è¦‹ã¤ã‹ã‚‰ãªã„å ´åˆã¯æœ«å°¾ã«è¿½åŠ 
    if (!motionSectionFound) {
      body.appendParagraph('\nã€è­°äº‹ã€‘');

      // ãƒãƒ¼ã‚«ãƒ¼ã‚’éè¡¨ç¤ºã§è¿½åŠ ï¼ˆãƒ•ã‚©ãƒ³ãƒˆã‚µã‚¤ã‚º1ã€ç™½è‰²ï¼‰
      const startMarker = body.appendParagraph(MOTION_START_MARKER);
      startMarker.editAsText().setFontSize(1).setForegroundColor('#ffffff');

      if (motionsContent) {
        const lines = motionsContent.split('\n');
        lines.forEach(line => {
          body.appendParagraph(line);
        });
      }

      // çµ‚äº†ãƒãƒ¼ã‚«ãƒ¼ã‚‚éè¡¨ç¤ºã§è¿½åŠ 
      const endMarker = body.appendParagraph(MOTION_END_MARKER);
      endMarker.editAsText().setFontSize(1).setForegroundColor('#ffffff');
    }

    doc.saveAndClose();

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã®ãƒãƒ¼ã‚¸ãƒ§ãƒ³æ›´æ–°
    updateDocVersion(docId);

    addAuditLog('UPDATE_MOTIONS_EXT', docId, `è­°æ¡ˆãƒ–ãƒ­ãƒƒã‚¯æ›´æ–°ï¼ˆæ‹¡å¼µç‰ˆï¼‰: ${motions.length}ä»¶`, true);

  } catch (error) {
    console.error('è­°æ¡ˆãƒ–ãƒ­ãƒƒã‚¯æ›´æ–°ã‚¨ãƒ©ãƒ¼:', error);
    throw error;
  }
}

// === AIæ•´å½¢å‡¦ç† ===
function formatMotionWithAI(inputHtml, title) {
  try {
    const properties = PropertiesService.getScriptProperties();
    const useOpenAI = properties.getProperty('USE_OPENAI') === 'true';
    const apiKey = properties.getProperty('OPENAI_API_KEY');

    // HTMLã‚’ãƒ†ã‚­ã‚¹ãƒˆã«å¤‰æ›
    const inputText = htmlToText(inputHtml);

    // OpenAI APIã‚’ä½¿ç”¨ã™ã‚‹å ´åˆ
    if (useOpenAI && apiKey) {
      return formatMotionWithOpenAI(inputText, title, apiKey);
    } else {
      // ç°¡æ˜“æ•´å½¢å‡¦ç†ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
      return simpleFormatMotion(inputText, title);
    }

  } catch (error) {
    console.error('AIæ•´å½¢ã‚¨ãƒ©ãƒ¼:', error);
    return htmlToText(inputHtml);
  }
}

// === OpenAI APIã‚’ä½¿ã£ãŸè­°æ¡ˆæ•´å½¢ ===
function formatMotionWithOpenAI(inputText, title, apiKey) {
  try {
    const properties = PropertiesService.getScriptProperties();
    // ãƒ¢ãƒ‡ãƒ«ã¯GPT-5ã«å›ºå®š
    const model = 'gpt-5';
    const customPrompt = properties.getProperty('AI_PROMPT') || '';

    const systemPrompt = `ã‚ãªãŸã¯ä¼æ¥­ã®æ³•å‹™éƒ¨é–€ã§åƒãè­°äº‹éŒ²ä½œæˆã®ã‚¹ãƒšã‚·ãƒ£ãƒªã‚¹ãƒˆã§ã™ã€‚
å…¥åŠ›ã•ã‚ŒãŸè­°æ¡ˆå†…å®¹ã‚’ã€æ—¥æœ¬ã®ä¼šç¤¾æ³•ã«æº–æ‹ ã—ãŸè‡ªç„¶ãªæ—¥æœ¬èªã®è­°äº‹éŒ²ã¨ã—ã¦æ•´å½¢ã—ã¦ãã ã•ã„ã€‚

ã€é‡è¦ã€‘å‡ºåŠ›å½¢å¼ï¼š
- è¦‹å‡ºã—ã‚„é …ç›®ç•ªå·ï¼ˆã€ã€‘ã‚„1.2.3.ãªã©ï¼‰ã¯ä½¿ç”¨ã›ãšã€è‡ªç„¶ãªæ–‡ç« ã§è¨˜è¿°ã—ã¦ãã ã•ã„
- ã€Œè­°é•·ã®æŒ‡åã«ã‚ˆã‚Šã€ã€‡ã€‡ã‹ã‚‰ä»¥ä¸‹ã®èª¬æ˜ãŒãªã•ã‚ŒãŸã€ã¨ã„ã†æ›¸ãå‡ºã—ã§å§‹ã‚ã¦ãã ã•ã„
- è­°æ¡ˆå†…å®¹ã¯æ®µè½ã§åŒºåˆ‡ã‚ŠãªãŒã‚‰ã€æµã‚Œã‚‹ã‚ˆã†ãªæ–‡ç« ã§è¨˜è¿°ã—ã¦ãã ã•ã„
- æœ€å¾Œã¯ã€Œè­°é•·ãŒæœ¬è­°æ¡ˆã«ã¤ã„ã¦è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€å‡ºå¸­å–ç· å½¹å…¨å“¡ç•°è­°ãªãã€åŸæ¡ˆã©ãŠã‚Šæ‰¿èªå¯æ±ºã•ã‚ŒãŸã€‚ã€ã§ç· ã‚ããã£ã¦ãã ã•ã„

æ–‡ä½“ã®æ³¨æ„ï¼š
- è­°äº‹éŒ²ç‰¹æœ‰ã®ä¸å¯§ãªæ–‡ä½“ï¼ˆã§ã‚ã‚‹èª¿ï¼‰ã‚’ä½¿ç”¨
- ç®‡æ¡æ›¸ãã¯æœ€å°é™ã«ç•™ã‚ã€æ–‡ç« ã§èª¬æ˜ã™ã‚‹
- ã€Œã€œã«ã¤ã„ã¦èª¬æ˜ãŒãªã•ã‚ŒãŸã€ã€Œã€œã™ã‚‹ã“ã¨ã¨ã—ãŸã€ãªã©ã®è­°äº‹éŒ²ã‚‰ã—ã„è¡¨ç¾ã‚’ä½¿ç”¨
- å…·ä½“çš„ãªæ•°å€¤ã‚„äº‹å®Ÿã¯æ˜ç¢ºã«è¨˜è¼‰ã—ã€æ›–æ˜§ãªè¡¨ç¾ã¯é¿ã‘ã‚‹

ã€ä¼šç¤¾æ³•ãƒ»é–‹ç¤ºè¦åˆ¶ã®è¦³ç‚¹ã‹ã‚‰ã®ç¢ºèªã€‘
è­°æ¡ˆå†…å®¹ã«ä»¥ä¸‹ã®è¦ç´ ãŒå«ã¾ã‚Œã‚‹å ´åˆã¯ã€å¿…ãšæ³•çš„ç•™æ„äº‹é …ã‚’æ–‡æœ«ã«è¿½åŠ ã—ã¦ãã ã•ã„ï¼š

1. å–ç· å½¹ä¼šæ±ºè­°äº‹é …ï¼ˆä¼šç¤¾æ³•362æ¡4é …ï¼‰ã«è©²å½“ã™ã‚‹å ´åˆ
   - é‡è¦ãªè²¡ç”£ã®å‡¦åˆ†ãƒ»è­²å—ã‘
   - å¤šé¡ã®å€Ÿè²¡
   - é‡è¦ãªä½¿ç”¨äººã®é¸ä»»ãƒ»è§£ä»»
   - é‡è¦ãªçµ„ç¹”ã®è¨­ç½®ãƒ»å¤‰æ›´ãƒ»å»ƒæ­¢
   â†’ ã€ŒãªãŠã€æœ¬ä»¶ã¯ä¼šç¤¾æ³•ç¬¬362æ¡ç¬¬4é …ã«å®šã‚ã‚‹é‡è¦ãªã€‡ã€‡ã«è©²å½“ã™ã‚‹ãŸã‚ã€å–ç· å½¹ä¼šã®æ±ºè­°äº‹é …ã§ã‚ã‚‹ã€‚ã€

2. åˆ©ç›Šç›¸åå–å¼•ï¼ˆä¼šç¤¾æ³•356æ¡ï¼‰ã«è©²å½“ã™ã‚‹å ´åˆ
   - å–ç· å½¹ã®è‡ªå·±å–å¼•
   - å–ç· å½¹ã¨ä¼šç¤¾ã®åˆ©ç›ŠãŒç›¸åã™ã‚‹å–å¼•
   â†’ ã€Œæœ¬å–å¼•ã¯ä¼šç¤¾æ³•ç¬¬356æ¡ã«å®šã‚ã‚‹åˆ©ç›Šç›¸åå–å¼•ã«è©²å½“ã™ã‚‹ãŸã‚ã€å–ç· å½¹ä¼šã®æ‰¿èªã‚’è¦ã™ã‚‹ã€‚ã€

3. ä¸Šå ´ä¼æ¥­ã®é©æ™‚é–‹ç¤ºäº‹é …ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹å ´åˆ
   - æ±ºç®—æƒ…å ±ã€æ¥­ç¸¾äºˆæƒ³ã®ä¿®æ­£
   - é…å½“äºˆæƒ³ã®ä¿®æ­£
   - æ–°ãŸãªäº‹æ¥­ã®é–‹å§‹ã€é‡è¦ãªäº‹æ¥­ã‹ã‚‰ã®æ’¤é€€
   - åˆä½µã€ä¼šç¤¾åˆ†å‰²ã€æ ªå¼äº¤æ›ã€äº‹æ¥­è­²æ¸¡
   - ç¬¬ä¸‰è€…å‰²å½“å¢—è³‡ã€æ–°æ ªäºˆç´„æ¨©ã®ç™ºè¡Œ
   â†’ ã€Œæœ¬ä»¶ã¯æ±äº¬è¨¼åˆ¸å–å¼•æ‰€ã®é©æ™‚é–‹ç¤ºè¦å‰‡ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€é–‹ç¤ºã®è¦å¦ã«ã¤ã„ã¦ç¢ºèªã‚’è¡Œã†ã“ã¨ã¨ã™ã‚‹ã€‚ã€

4. ã‚¤ãƒ³ã‚µã‚¤ãƒ€ãƒ¼å–å¼•è¦åˆ¶ã«é–¢ã‚ã‚‹äº‹é …
   - é‡è¦äº‹å®Ÿã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹æƒ…å ±
   â†’ ã€Œæœ¬ä»¶ã¯é‡‘èå•†å“å–å¼•æ³•ä¸Šã®é‡è¦äº‹å®Ÿã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€æƒ…å ±ç®¡ç†ã«ååˆ†ç•™æ„ã™ã‚‹ã“ã¨ã¨ã™ã‚‹ã€‚ã€

5. ãã®ä»–ã®æ³•çš„æ¤œè¨äº‹é …
   - å®šæ¬¾å¤‰æ›´ã‚’è¦ã™ã‚‹äº‹é …
   - æ ªä¸»ç·ä¼šæ±ºè­°ã‚’è¦ã™ã‚‹äº‹é …
   - å®˜å…¬åºã¸ã®å±Šå‡ºãƒ»è¨±èªå¯ã‚’è¦ã™ã‚‹äº‹é …
   â†’ è©²å½“ã™ã‚‹æ³•ä»¤ã‚„æ‰‹ç¶šãã‚’æ˜è¨˜

${customPrompt}`;

    const userPrompt = `
è­°æ¡ˆã‚¿ã‚¤ãƒˆãƒ«: ${title}

å…¥åŠ›å†…å®¹:
${inputText}

ä¸Šè¨˜ã®å†…å®¹ã‚’æ¨™æº–ãƒ•ã‚©ãƒ¼ãƒãƒƒãƒˆã«æ•´å½¢ã—ã¦ãã ã•ã„ã€‚`;

    // OpenAI APIãƒªã‚¯ã‚¨ã‚¹ãƒˆ
    const url = 'https://api.openai.com/v1/chat/completions';
    const payload = {
      model: model,
      messages: [
        {
          role: 'system',
          content: systemPrompt
        },
        {
          role: 'user',
          content: userPrompt
        }
      ],
      temperature: 0.3,
      max_tokens: 2000
    };

    const options = {
      method: 'post',
      headers: {
        'Authorization': `Bearer ${apiKey}`,
        'Content-Type': 'application/json'
      },
      payload: JSON.stringify(payload),
      muteHttpExceptions: true
    };

    const response = UrlFetchApp.fetch(url, options);
    const responseCode = response.getResponseCode();

    if (responseCode === 200) {
      const jsonResponse = JSON.parse(response.getContentText());
      const formattedText = jsonResponse.choices[0].message.content;

      // ã‚¿ã‚¤ãƒˆãƒ«ã‚’è¿½åŠ 
      return `ã€${title}ã€‘\n\n${formattedText}`;
    } else {
      // APIã‚¨ãƒ©ãƒ¼ã®å ´åˆã¯ç°¡æ˜“æ•´å½¢ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
      console.error('OpenAI APIã‚¨ãƒ©ãƒ¼:', response.getContentText());
      return simpleFormatMotion(inputText, title);
    }

  } catch (error) {
    console.error('OpenAI APIå‘¼ã³å‡ºã—ã‚¨ãƒ©ãƒ¼:', error);
    // ã‚¨ãƒ©ãƒ¼æ™‚ã¯ç°¡æ˜“æ•´å½¢ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
    return simpleFormatMotion(inputText, title);
  }
}

// === ç°¡æ˜“æ•´å½¢å‡¦ç†ï¼ˆAIãŒä½¿ãˆãªã„å ´åˆï¼‰ ===
function simpleFormatMotion(inputText, title) {
  // å…¥åŠ›ãƒ†ã‚­ã‚¹ãƒˆã‚’ã‚¯ãƒªãƒ¼ãƒ³ã‚¢ãƒƒãƒ—
  const cleanedText = inputText.trim().replace(/\n{3,}/g, '\n\n');

  // è¨˜å·ã‚„ãƒ©ãƒ™ãƒ«ã‚’å‰Šé™¤
  let formattedText = cleanedText
    .replace(/ã€.*?ã€‘/g, '') // ã€ã€‘ãƒ©ãƒ™ãƒ«ã‚’å‰Šé™¤
    .replace(/[â– â–¡â—†â—‡â—‹â—]/g, '') // è¨˜å·ã‚’å‰Šé™¤
    .replace(/^\d+[\.\)ï¼ï¼‰]\s*/gm, '') // ç•ªå·ä»˜ããƒªã‚¹ãƒˆã‚’å‰Šé™¤
    .replace(/^[ãƒ»ãƒ»ï½¥-]\s*/gm, '') // ç®‡æ¡æ›¸ãè¨˜å·ã‚’å‰Šé™¤
    .trim();

  // ã‚¿ã‚¤ãƒˆãƒ«ã‹ã‚‰è­°æ¡ˆã®ç¨®é¡ã‚’æ¨æ¸¬
  const titleLower = title.toLowerCase();

  // çŸ­ã„å…¥åŠ›ã‚’è©³ç´°ã«è†¨ã‚‰ã¾ã›ã‚‹
  if (formattedText.length < 100) {
    // çŸ­ã„æ–‡ç« ã®å ´åˆã€è‡ªå‹•çš„ã«è©³ç´°ã‚’è£œå®Œ
    formattedText = expandShortMotion(formattedText, title);
  } else {
    // é€šå¸¸ã®æ•´å½¢å‡¦ç†
    // æœ¬æ–‡ã‚’è‡ªç„¶ãªæ®µè½ã«æ•´å½¢
    const paragraphs = formattedText.split(/\n\n+/);
    formattedText = '';
    paragraphs.forEach((para, index) => {
      if (para.trim()) {
        // å„æ®µè½ã‚’è‡ªç„¶ãªæ–‡ç« ã«æ•´å½¢
        let cleanPara = para.trim();
        // æœ€åˆã®æ®µè½ã¯å°å…¥æ–‡ã¨ã—ã¦æ•´å½¢
        if (index === 0 && !cleanPara.match(/^å½“ç¤¾|æœ¬ä»¶|ä»Šå›/)) {
          cleanPara = `æœ¬ä»¶ã«é–¢ã—ã€${cleanPara}`;
        }
        formattedText += cleanPara;
        if (index < paragraphs.length - 1) {
          formattedText += '\n\n';
        }
      }
    });
  }

  // è­°æ¡ˆã®å†…å®¹ã‹ã‚‰æ³•çš„ç•™æ„ç‚¹ã‚’ç°¡æ˜“çš„ã«ãƒã‚§ãƒƒã‚¯
  const legalNotes = checkLegalRequirements(formattedText, title);
  if (legalNotes.length > 0) {
    formattedText += '\n\n';
    legalNotes.forEach(note => {
      formattedText += note + '\n';
    });
  }

  // æ–‡ç« ã®ä¸€è²«æ€§ã‚’ãƒã‚§ãƒƒã‚¯
  formattedText = ensureTextCoherence(formattedText, title);

  return formattedText;
}

// === æ–‡ç« ã®ä¸€è²«æ€§ã‚’ç¢ºä¿ ===
function ensureTextCoherence(text, title) {
  // æ–‡ç« ãŒæ–­ç‰‡åŒ–ã—ã¦ã„ãªã„ã‹ç¢ºèª
  let coherentText = text;

  // æ–‡æœ«ã®çµ±ä¸€ï¼ˆã§ã‚ã‚‹èª¿ã«çµ±ä¸€ï¼‰
  coherentText = coherentText
    .replace(/ã§ã™ã€‚/g, 'ã§ã‚ã‚‹ã€‚')
    .replace(/ã¾ã™ã€‚/g, 'ã‚‹ã€‚')
    .replace(/ã¾ã—ãŸã€‚/g, 'ãŸã€‚')
    .replace(/ã§ã—ãŸã€‚/g, 'ã§ã‚ã£ãŸã€‚')
    .replace(/ã¾ã›ã‚“ã€‚/g, 'ãªã„ã€‚')
    .replace(/ãã ã•ã„ã€‚/g, 'ã“ã¨ã¨ã™ã‚‹ã€‚');

  // æ–‡ç« ã®æ¥ç¶šã‚’ç¢ºèª
  const sentences = coherentText.split(/ã€‚/);
  let rebuiltText = '';

  sentences.forEach((sentence, index) => {
    let trimmedSentence = sentence.trim();
    if (!trimmedSentence) return;

    // æ–‡é ­ãŒå°æ–‡å­—ã‚„æ¥ç¶šèªãªã—ã§å§‹ã¾ã‚‹å ´åˆã®ä¿®æ­£
    if (index > 0 && rebuiltText.length > 0) {
      // å‰ã®æ–‡ã¨ã®é–¢ä¿‚ã‚’ç¢ºèª
      if (!trimmedSentence.match(/^(ã¾ãŸ|ãªãŠ|ãŸã ã—|ã•ã‚‰ã«|åŠ ãˆã¦|ä¸€æ–¹|ä»–æ–¹|ã“ã‚Œã«ã‚ˆã‚Š|ãã®çµæœ|ã—ãŸãŒã£ã¦|ã‚ˆã£ã¦|ä»¥ä¸Š)/)) {
        // æ¥ç¶šãŒä¸è‡ªç„¶ãªå ´åˆã¯é©åˆ‡ãªæ¥ç¶šèªã‚’è¿½åŠ 
        if (trimmedSentence.match(/^(å½“ç¤¾|æœ¬ä»¶|ä»Šå›|åŒ)/)) {
          // ä¸»èªã§å§‹ã¾ã‚‹å ´åˆã¯ãã®ã¾ã¾
        } else if (index === sentences.length - 2) {
          // æœ€å¾Œã‹ã‚‰2ç•ªç›®ã®æ–‡ã®å ´åˆ
          trimmedSentence = 'ãªãŠã€' + trimmedSentence;
        }
      }
    }

    rebuiltText += trimmedSentence;
    if (index < sentences.length - 1 && trimmedSentence) {
      rebuiltText += 'ã€‚';
    }
  });

  // æ®µè½ã®æ•´åˆæ€§ãƒã‚§ãƒƒã‚¯
  const paragraphs = rebuiltText.split(/\n\n+/);
  let finalText = '';

  paragraphs.forEach((para, index) => {
    let trimmedPara = para.trim();
    if (!trimmedPara) return;

    // æ®µè½ã®æ–‡å­—æ•°ãŒæ¥µç«¯ã«çŸ­ã„å ´åˆã¯å‰å¾Œã®æ®µè½ã¨çµåˆã‚’æ¤œè¨
    if (trimmedPara.length < 30 && index > 0 && finalText) {
      // å‰ã®æ®µè½ã«çµåˆ
      finalText += 'ã¾ãŸã€' + trimmedPara;
    } else {
      if (finalText) finalText += '\n\n';
      finalText += trimmedPara;
    }
  });

  // æœ€çµ‚çš„ãªæ–‡æœ«å‡¦ç†
  if (!finalText.endsWith('ã€‚')) {
    finalText += 'ã€‚';
  }

  return finalText;
}

// === çŸ­ã„è­°æ¡ˆã‚’è©³ç´°ã«å±•é–‹ ===
function expandShortMotion(text, title) {
  let expanded = '';
  const textLower = text.toLowerCase();
  const titleLower = title.toLowerCase();

  // ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ãƒ™ãƒ¼ã‚¹ã§å†…å®¹ã‚’æ¨æ¸¬ã—ã¦å±•é–‹
  if (titleLower.includes('ãƒ©ãƒ–ã‚¢ãƒ³') || textLower.includes('ãƒ©ãƒ–ã‚¢ãƒ³') ||
      titleLower.includes('å›½éš›') || textLower.includes('æµ·å¤–')) {
    // ãƒ©ãƒ–ã‚¢ãƒ³æ³•äººé–¢é€£ã®å ´åˆ
    expanded = `å½“ç¤¾ã¯ã€ã‚°ãƒ­ãƒ¼ãƒãƒ«ãªäº‹æ¥­å±•é–‹ã®ä¸€ç’°ã¨ã—ã¦ã€ãƒãƒ¬ãƒ¼ã‚·ã‚¢ãƒ»ãƒ©ãƒ–ã‚¢ãƒ³å›½éš›ãƒ“ã‚¸ãƒã‚¹é‡‘èã‚»ãƒ³ã‚¿ãƒ¼ã«ãŠã‘ã‚‹æ³•äººé‹å–¶ã‚’æ¤œè¨ã—ã¦ã¾ã„ã‚Šã¾ã—ãŸã€‚\n\n`;
    expanded += `ãƒ©ãƒ–ã‚¢ãƒ³æ³•äººã¯ã€å›½éš›é‡‘èã‚»ãƒ³ã‚¿ãƒ¼ã¨ã—ã¦ã®åˆ¶åº¦çš„å„ªä½æ€§ã‚’æœ‰ã—ã¦ãŠã‚Šã€ä»¥ä¸‹ã®ãƒ¡ãƒªãƒƒãƒˆãŒæœŸå¾…ã•ã‚Œã¾ã™ã€‚\n`;
    expanded += `ç¬¬ä¸€ã«ã€ç¨åˆ¶é¢ã§ã®å„ªé‡æªç½®ã«ã‚ˆã‚Šã€åŠ¹ç‡çš„ãªè³‡é‡‘ç®¡ç†ãŒå¯èƒ½ã¨ãªã‚Šã¾ã™ã€‚`;
    expanded += `ç¬¬äºŒã«ã€è¦åˆ¶é¢ã§ã®æŸ”è»Ÿæ€§ã«ã‚ˆã‚Šã€å›½éš›å–å¼•ã®å††æ»‘åŒ–ãŒå›³ã‚Œã¾ã™ã€‚`;
    expanded += `ç¬¬ä¸‰ã«ã€ã‚¢ã‚¸ã‚¢å¤ªå¹³æ´‹åœ°åŸŸã¸ã®ã‚¢ã‚¯ã‚»ã‚¹ãƒã‚¤ãƒ³ãƒˆã¨ã—ã¦ã€æˆ¦ç•¥çš„ãªç«‹åœ°ã‚’æ´»ç”¨ã§ãã¾ã™ã€‚\n\n`;
    expanded += `${text}\n\n`;
    expanded += `æœ¬ä»¶ã®å®Ÿæ–½ã«ã‚ˆã‚Šã€å½“ç¤¾ã®ã‚°ãƒ­ãƒ¼ãƒãƒ«ç«¶äº‰åŠ›ã®å¼·åŒ–ã¨ã€æ–°ãŸãªåç›Šæ©Ÿä¼šã®å‰µå‡ºãŒæœŸå¾…ã•ã‚Œã¾ã™ã€‚`;
    expanded += `ãªãŠã€å®Ÿæ–½ã«ã‚ãŸã£ã¦ã¯ã€ç¾åœ°æ³•è¦åˆ¶ã®éµå®ˆã¨é©åˆ‡ãªã‚¬ãƒãƒŠãƒ³ã‚¹ä½“åˆ¶ã®æ§‹ç¯‰ã«ä¸‡å…¨ã‚’æœŸã™ã“ã¨ã¨ã—ã¾ã™ã€‚`;
  } else if (titleLower.includes('ãƒã‚±ãƒ¢ãƒ³') || textLower.includes('ã‚«ãƒ¼ãƒ‰') ||
             titleLower.includes('äº‹æ¥­') || textLower.includes('æ–°è¦')) {
    // æ–°è¦äº‹æ¥­é–¢é€£ã®å ´åˆ
    expanded = `å½“ç¤¾ã¯ã€äº‹æ¥­ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒªã‚ªã®å¤šæ§˜åŒ–ã¨åç›ŠåŸºç›¤ã®å¼·åŒ–ã‚’ç›®çš„ã¨ã—ã¦ã€æ–°è¦äº‹æ¥­ã¸ã®å‚å…¥ã‚’æ¤œè¨ã—ã¦ã¾ã„ã‚Šã¾ã—ãŸã€‚\n\n`;
    expanded += `${text}\n\n`;
    expanded += `æœ¬äº‹æ¥­ã¯ã€å½“ç¤¾ã®æ—¢å­˜äº‹æ¥­ã¨ã®ã‚·ãƒŠã‚¸ãƒ¼åŠ¹æœãŒæœŸå¾…ã§ãã€ä»¥ä¸‹ã®ç‚¹ã§æˆ¦ç•¥çš„æ„ç¾©ãŒã‚ã‚Šã¾ã™ã€‚\n`;
    expanded += `ç¬¬ä¸€ã«ã€æ–°ãŸãªé¡§å®¢å±¤ã¸ã®ã‚¢ãƒ—ãƒ­ãƒ¼ãƒãŒå¯èƒ½ã¨ãªã‚Šã€åç›Šæºã®å¤šæ§˜åŒ–ãŒå›³ã‚Œã¾ã™ã€‚`;
    expanded += `ç¬¬äºŒã«ã€ãƒ‡ã‚¸ã‚¿ãƒ«ãƒˆãƒ©ãƒ³ã‚¹ãƒ•ã‚©ãƒ¼ãƒ¡ãƒ¼ã‚·ãƒ§ãƒ³ã®æ¨é€²ã«ã‚ˆã‚Šã€äº‹æ¥­åŠ¹ç‡ã®å‘ä¸ŠãŒæœŸå¾…ã•ã‚Œã¾ã™ã€‚`;
    expanded += `ç¬¬ä¸‰ã«ã€å¸‚å ´ã®æˆé•·æ€§ãŒé«˜ãã€ä¸­é•·æœŸçš„ãªåç›Šæ‹¡å¤§ãŒè¦‹è¾¼ã¾ã‚Œã¾ã™ã€‚\n\n`;
    expanded += `äº‹æ¥­é–‹å§‹ã«ã‚ãŸã£ã¦ã¯ã€é©åˆ‡ãªäººå“¡é…ç½®ã¨æŠ•è³‡è¨ˆç”»ã‚’ç­–å®šã—ã€ãƒªã‚¹ã‚¯ç®¡ç†ä½“åˆ¶ã‚’æ•´å‚™ã—ãŸä¸Šã§ã€æ®µéšçš„ã«å±•é–‹ã™ã‚‹ã“ã¨ã¨ã—ã¾ã™ã€‚`;
  } else if (titleLower.includes('è³‡é‡‘') || textLower.includes('è³‡é‡‘') ||
             titleLower.includes('å€Ÿå…¥') || textLower.includes('èè³‡')) {
    // è³‡é‡‘èª¿é”é–¢é€£ã®å ´åˆ
    expanded = `å½“ç¤¾ã®äº‹æ¥­æ‹¡å¤§ãŠã‚ˆã³é‹è»¢è³‡é‡‘ã®ç¢ºä¿ã‚’ç›®çš„ã¨ã—ã¦ã€ä»¥ä¸‹ã®è³‡é‡‘èª¿é”ã‚’å®Ÿæ–½ã—ãŸãå­˜ã˜ã¾ã™ã€‚\n\n`;
    expanded += `${text}\n\n`;
    expanded += `æœ¬ä»¶è³‡é‡‘èª¿é”ã®å¿…è¦æ€§ãŠã‚ˆã³åˆç†æ€§ã«ã¤ã„ã¦ã¯ä»¥ä¸‹ã®ã¨ãŠã‚Šã§ã™ã€‚\n`;
    expanded += `ç¬¬ä¸€ã«ã€äº‹æ¥­æ‹¡å¤§ã«ä¼´ã†è¨­å‚™æŠ•è³‡è³‡é‡‘ã¨ã—ã¦æ´»ç”¨ã—ã€ç”Ÿç”£èƒ½åŠ›ã®å‘ä¸Šã‚’å›³ã‚Šã¾ã™ã€‚`;
    expanded += `ç¬¬äºŒã«ã€é‹è»¢è³‡é‡‘ã®å……å®Ÿã«ã‚ˆã‚Šã€è²¡å‹™åŸºç›¤ã®å®‰å®šåŒ–ã‚’å®Ÿç¾ã—ã¾ã™ã€‚`;
    expanded += `ç¬¬ä¸‰ã«ã€æ–°è¦äº‹æ¥­ã¸ã®æŠ•è³‡è³‡é‡‘ã¨ã—ã¦æ´»ç”¨ã—ã€æˆé•·æ©Ÿä¼šã‚’ç¢ºå®Ÿã«æ•æ‰ã—ã¾ã™ã€‚\n\n`;
    expanded += `èª¿é”æ¡ä»¶ã«ã¤ã„ã¦ã¯ã€è¤‡æ•°ã®é‡‘èæ©Ÿé–¢ã¨å”è­°ã®ä¸Šã€æœ€ã‚‚æœ‰åˆ©ãªæ¡ä»¶ã§å®Ÿæ–½ã™ã‚‹ã“ã¨ã¨ã—ã€è¿”æ¸ˆè¨ˆç”»ã«ã¤ã„ã¦ã‚‚ç„¡ç†ã®ãªã„ç¯„å›²ã§è¨­å®šã„ãŸã—ã¾ã™ã€‚`;
  } else {
    // ãã®ä»–ã®ä¸€èˆ¬çš„ãªè­°æ¡ˆ
    expanded = `${text}\n\n`;
    expanded += `æœ¬ä»¶ã¯ã€å½“ç¤¾ã®çµŒå–¶æˆ¦ç•¥ä¸Šé‡è¦ãªæ¡ˆä»¶ã§ã‚ã‚Šã€ä»¥ä¸‹ã®è¦³ç‚¹ã‹ã‚‰å®Ÿæ–½ãŒå¿…è¦ã¨åˆ¤æ–­ã•ã‚Œã¾ã™ã€‚\n`;
    expanded += `ç¬¬ä¸€ã«ã€äº‹æ¥­ã®ç¶™ç¶šæ€§ã¨ç™ºå±•æ€§ã®è¦³ç‚¹ã‹ã‚‰ã€é©æ™‚é©åˆ‡ãªå¯¾å¿œãŒæ±‚ã‚ã‚‰ã‚Œã¾ã™ã€‚`;
    expanded += `ç¬¬äºŒã«ã€ç«¶äº‰å„ªä½æ€§ã®ç¢ºä¿ã¨å¸‚å ´ã§ã®åœ°ä½å‘ä¸Šã«å¯„ä¸ã™ã‚‹ã“ã¨ãŒæœŸå¾…ã•ã‚Œã¾ã™ã€‚`;
    expanded += `ç¬¬ä¸‰ã«ã€ã‚¹ãƒ†ãƒ¼ã‚¯ãƒ›ãƒ«ãƒ€ãƒ¼ã®æœŸå¾…ã«å¿œãˆã€ä¼æ¥­ä¾¡å€¤ã®å‘ä¸Šã«ã¤ãªãŒã‚Šã¾ã™ã€‚\n\n`;
    expanded += `å®Ÿæ–½ã«ã‚ãŸã£ã¦ã¯ã€é–¢ä¿‚éƒ¨é–€ã¨ã®é€£æºã‚’å¯†ã«ã—ã€é©åˆ‡ãªé€²æ—ç®¡ç†ã‚’è¡Œã†ã“ã¨ã¨ã—ã¾ã™ã€‚`;
  }

  return expanded;
}

// === æ³•çš„è¦ä»¶ã®ç°¡æ˜“ãƒã‚§ãƒƒã‚¯ ===
function checkLegalRequirements(text, title) {
  const notes = [];
  const lowerText = (text + title).toLowerCase();

  // é‡è¦ãªè²¡ç”£ã®å‡¦åˆ†ãƒ»è­²å—ã‘ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('è­²æ¸¡') || lowerText.includes('å£²å´') ||
      lowerText.includes('å–å¾—') || lowerText.includes('è²·å')) {
    notes.push('ãªãŠã€æœ¬ä»¶ã¯ä¼šç¤¾æ³•ç¬¬362æ¡ç¬¬4é …ã«å®šã‚ã‚‹é‡è¦ãªè²¡ç”£ã®å‡¦åˆ†ãƒ»è­²å—ã‘ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€å–ç· å½¹ä¼šã®æ±ºè­°äº‹é …ã§ã‚ã‚‹ã€‚');
  }

  // å€Ÿå…¥ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('å€Ÿå…¥') || lowerText.includes('èè³‡') ||
      lowerText.includes('ãƒ­ãƒ¼ãƒ³')) {
    notes.push('æœ¬ä»¶ã¯ä¼šç¤¾æ³•ç¬¬362æ¡ç¬¬4é …ã«å®šã‚ã‚‹å¤šé¡ã®å€Ÿè²¡ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€ãã®é‡‘é¡è¦æ¨¡ã«ç•™æ„ã™ã‚‹å¿…è¦ãŒã‚ã‚‹ã€‚');
  }

  // æ–°äº‹æ¥­ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('æ–°äº‹æ¥­') || lowerText.includes('æ–°è¦äº‹æ¥­') ||
      lowerText.includes('äº‹æ¥­é–‹å§‹') || lowerText.includes('å‚å…¥')) {
    notes.push('æœ¬ä»¶ã¯æ±äº¬è¨¼åˆ¸å–å¼•æ‰€ã®é©æ™‚é–‹ç¤ºè¦å‰‡ã«ãŠã‘ã‚‹æ–°ãŸãªäº‹æ¥­ã®é–‹å§‹ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€é–‹ç¤ºã®è¦å¦ã«ã¤ã„ã¦ç¢ºèªã‚’è¡Œã†ã“ã¨ã¨ã™ã‚‹ã€‚');
  }

  // çµ„ç¹”å¤‰æ›´ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('çµ„ç¹”') || lowerText.includes('éƒ¨é–€') ||
      lowerText.includes('æ”¯åº—') || lowerText.includes('å–¶æ¥­æ‰€')) {
    notes.push('æœ¬ä»¶ã¯ä¼šç¤¾æ³•ç¬¬362æ¡ç¬¬4é …ã«å®šã‚ã‚‹é‡è¦ãªçµ„ç¹”ã®è¨­ç½®ãƒ»å¤‰æ›´ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ã€‚');
  }

  // äººäº‹ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('é¸ä»»') || lowerText.includes('è§£ä»»') ||
      lowerText.includes('ä»»å‘½') || lowerText.includes('ç•°å‹•')) {
    if (lowerText.includes('åŸ·è¡Œå½¹å“¡') || lowerText.includes('éƒ¨é•·') ||
        lowerText.includes('æ”¯åº—é•·')) {
      notes.push('æœ¬ä»¶ã¯ä¼šç¤¾æ³•ç¬¬362æ¡ç¬¬4é …ã«å®šã‚ã‚‹é‡è¦ãªä½¿ç”¨äººã®é¸ä»»ãƒ»è§£ä»»ã«è©²å½“ã™ã‚‹ã€‚');
    }
  }

  // åˆ©ç›Šç›¸åã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('åˆ©ç›Šç›¸å') || lowerText.includes('è‡ªå·±å–å¼•') ||
      lowerText.includes('ç«¶æ¥­')) {
    notes.push('æœ¬å–å¼•ã¯ä¼šç¤¾æ³•ç¬¬356æ¡ã«å®šã‚ã‚‹åˆ©ç›Šç›¸åå–å¼•ã«è©²å½“ã™ã‚‹ãŸã‚ã€å–ç· å½¹ä¼šã®æ‰¿èªã‚’è¦ã™ã‚‹ã€‚');
  }

  // é…å½“ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('é…å½“') || lowerText.includes('å‰°ä½™é‡‘')) {
    notes.push('æœ¬ä»¶ã¯é…å½“ã«é–¢ã™ã‚‹äº‹é …ã§ã‚ã‚Šã€æ±äº¬è¨¼åˆ¸å–å¼•æ‰€ã®é©æ™‚é–‹ç¤ºè¦å‰‡ã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€é©åˆ‡ãªé–‹ç¤ºæ‰‹ç¶šãã‚’è¡Œã†å¿…è¦ãŒã‚ã‚‹ã€‚');
  }

  // M&Aé–¢é€£ã®ãƒã‚§ãƒƒã‚¯
  if (lowerText.includes('åˆä½µ') || lowerText.includes('è²·å') ||
      lowerText.includes('çµ±åˆ') || lowerText.includes('æ ªå¼äº¤æ›')) {
    notes.push('æœ¬ä»¶ã¯æ±äº¬è¨¼åˆ¸å–å¼•æ‰€ã®é©æ™‚é–‹ç¤ºè¦å‰‡ãŠã‚ˆã³é‡‘èå•†å“å–å¼•æ³•ä¸Šã®é‡è¦äº‹å®Ÿã«è©²å½“ã™ã‚‹å¯èƒ½æ€§ãŒã‚ã‚‹ãŸã‚ã€æƒ…å ±ç®¡ç†ãŠã‚ˆã³é–‹ç¤ºæ‰‹ç¶šãã«ååˆ†ç•™æ„ã™ã‚‹ã“ã¨ã¨ã™ã‚‹ã€‚');
  }

  return notes;
}

// === è­°æ¡ˆã‚’ã‚³ãƒ³ãƒ†ã‚­ã‚¹ãƒˆä»˜ãã§æ•´å½¢ ===
function formatMotionWithContext(context) {
  try {
    const properties = PropertiesService.getScriptProperties();
    const useOpenAI = properties.getProperty('USE_OPENAI') === 'true';
    const apiKey = properties.getProperty('OPENAI_API_KEY');

    // HTMLã‚’ãƒ†ã‚­ã‚¹ãƒˆã«å¤‰æ›
    const contentText = htmlToText(context.content);

    // OpenAI APIã‚’ä½¿ç”¨ã™ã‚‹å ´åˆ
    if (useOpenAI && apiKey) {
      return formatMotionWithOpenAIContext(contentText, context, apiKey);
    } else {
      // ç°¡æ˜“æ•´å½¢å‡¦ç†ã«ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
      return simpleFormatMotionWithContext(contentText, context);
    }

  } catch (error) {
    console.error('AIæ•´å½¢ã‚¨ãƒ©ãƒ¼:', error);
    return htmlToText(context.content);
  }
}

// === OpenAI APIã‚’ä½¿ã£ãŸè­°æ¡ˆæ•´å½¢ï¼ˆã‚³ãƒ³ãƒ†ã‚­ã‚¹ãƒˆç‰ˆï¼‰ ===
function formatMotionWithOpenAIContext(contentText, context, apiKey) {
  try {
    const systemPrompt = `ã‚ãªãŸã¯ä¼æ¥­ã®æ³•å‹™éƒ¨é–€ã§åƒãè­°äº‹éŒ²ä½œæˆã®ã‚¹ãƒšã‚·ãƒ£ãƒªã‚¹ãƒˆã§ã™ã€‚
å…¥åŠ›ã•ã‚ŒãŸè­°æ¡ˆå†…å®¹ã‚’ã€æ—¥æœ¬ã®ä¼šç¤¾æ³•ã«æº–æ‹ ã—ãŸè‡ªç„¶ãªæ—¥æœ¬èªã®è­°äº‹éŒ²ã¨ã—ã¦æ•´å½¢ã—ã¦ãã ã•ã„ã€‚

ã€é‡è¦ã€‘å‡ºåŠ›å½¢å¼ï¼š
- è¦‹å‡ºã—ã‚„é …ç›®ç•ªå·ï¼ˆã€ã€‘ã‚„1.2.3.ãªã©ï¼‰ã¯ä½¿ç”¨ã›ãšã€è‡ªç„¶ãªæ–‡ç« ã§è¨˜è¿°ã—ã¦ãã ã•ã„
- ã€Œè­°é•·ã®æŒ‡åã«ã‚ˆã‚Šã€ã€‡ã€‡ã‹ã‚‰ä»¥ä¸‹ã®èª¬æ˜ãŒãªã•ã‚ŒãŸã€ã¨ã„ã†æ›¸ãå‡ºã—ã§å§‹ã‚ã¦ãã ã•ã„
- è­°æ¡ˆå†…å®¹ã¯æ®µè½ã§åŒºåˆ‡ã‚ŠãªãŒã‚‰ã€æµã‚Œã‚‹ã‚ˆã†ãªæ–‡ç« ã§è¨˜è¿°ã—ã¦ãã ã•ã„
- æœ€å¾Œã¯ã€Œè­°é•·ãŒæœ¬è­°æ¡ˆã«ã¤ã„ã¦è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€${context.resolutionResult}ã—ãŸã€‚ã€ã§ç· ã‚ããã£ã¦ãã ã•ã„
${context.votingDetails ? `- è³›å¦ã®è©³ç´°ã¯è‡ªç„¶ãªå½¢ã§æ–‡ç« ã«çµ„ã¿è¾¼ã‚“ã§ãã ã•ã„` : ''}
${context.specialInterest ? `- ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚äººã«ã¤ã„ã¦ã¯ã€ŒãªãŠã€${context.specialInterest}ã¯æœ¬è­°æ¡ˆã«ã¤ã„ã¦ç‰¹åˆ¥ã®åˆ©å®³é–¢ä¿‚ã‚’æœ‰ã™ã‚‹ãŸã‚ã€æœ¬è­°æ¡ˆã®è­°æ±ºã«ã¯å‚åŠ ã—ãªã‹ã£ãŸã€‚ã€ã¨ã„ã†å½¢ã§è¨˜è¼‰ã—ã¦ãã ã•ã„` : ''}
${context.conditions ? `- ä»˜å¸¯æ¡ä»¶ã¯ã€ŒãŸã ã—ã€${context.conditions}ã‚’æ¡ä»¶ã¨ã™ã‚‹ã€‚ã€ã¨ã„ã†å½¢ã§è¿½è¨˜ã—ã¦ãã ã•ã„` : ''}`;

    const userPrompt = `ä»¥ä¸‹ã®è­°æ¡ˆã‚’æ•´å½¢ã—ã¦ãã ã•ã„ï¼š

è­°æ¡ˆã‚¿ã‚¤ãƒˆãƒ«: ${context.title}
èª¬æ˜è€…: ${context.presenter}
å†…å®¹: ${contentText}`;

    // OpenAI APIå‘¼ã³å‡ºã—ï¼ˆå®Ÿè£…æ¸ˆã¿ã®é–¢æ•°ã‚’ä½¿ç”¨ï¼‰
    const url = 'https://api.openai.com/v1/chat/completions';
    const payload = {
      model: 'gpt-5',
      messages: [
        { role: 'system', content: systemPrompt },
        { role: 'user', content: userPrompt }
      ],
      temperature: 0.3,
      max_tokens: 2000
    };

    const options = {
      method: 'post',
      contentType: 'application/json',
      headers: {
        'Authorization': `Bearer ${apiKey}`
      },
      payload: JSON.stringify(payload)
    };

    const response = UrlFetchApp.fetch(url, options);
    const json = JSON.parse(response.getContentText());

    if (json.choices && json.choices[0] && json.choices[0].message) {
      return json.choices[0].message.content.trim();
    }

    // ãƒ•ã‚©ãƒ¼ãƒ«ãƒãƒƒã‚¯
    return simpleFormatMotionWithContext(contentText, context);

  } catch (error) {
    console.error('OpenAI API ã‚¨ãƒ©ãƒ¼:', error);
    return simpleFormatMotionWithContext(contentText, context);
  }
}

// === ç°¡æ˜“æ•´å½¢å‡¦ç†ï¼ˆã‚³ãƒ³ãƒ†ã‚­ã‚¹ãƒˆç‰ˆï¼‰ ===
function simpleFormatMotionWithContext(contentText, context) {
  let result = '';

  // è¨˜å·ã‚„ãƒ©ãƒ™ãƒ«ã‚’å‰Šé™¤
  let cleanText = contentText
    .replace(/ã€.*?ã€‘/g, '') // ã€ã€‘ãƒ©ãƒ™ãƒ«ã‚’å‰Šé™¤
    .replace(/[â– â–¡â—†â—‡â—‹â—]/g, '') // è¨˜å·ã‚’å‰Šé™¤
    .replace(/^\d+[\.\)ï¼ï¼‰]\s*/gm, '') // ç•ªå·ä»˜ããƒªã‚¹ãƒˆã‚’å‰Šé™¤
    .replace(/^[ãƒ»ãƒ»ï½¥-]\s*/gm, '') // ç®‡æ¡æ›¸ãè¨˜å·ã‚’å‰Šé™¤
    .trim();

  // èª¬æ˜è€…ã®å°å…¥ï¼ˆè‡ªç„¶ãªæ–‡ç« ã¨ã—ã¦ï¼‰
  if (context.presenter && context.presenter !== 'è­°é•·') {
    result += `è­°é•·ã®æŒ‡åã«ã‚ˆã‚Šã€${context.presenter}ã‹ã‚‰æ¬¡ã®ã¨ãŠã‚Šèª¬æ˜ãŒã‚ã£ãŸã€‚\n\n`;
  } else {
    result += `è­°é•·ã‹ã‚‰ã€${context.title}ã«ã¤ã„ã¦æ¬¡ã®èª¬æ˜ãŒã‚ã£ãŸã€‚\n\n`;
  }

  // çŸ­ã„æ–‡ç« ã®å ´åˆã¯æ‹¡å¼µ
  if (contentText.length < 100) {
    const expanded = expandShortMotion(contentText, context.title);
    result += expanded + '\n\n';
  } else {
    // é•·ã„æ–‡ç« ã¯ãã®ã¾ã¾ä½¿ç”¨
    result += contentText + '\n\n';
  }

  // ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚äºº
  if (context.specialInterest) {
    result += `ãªãŠã€${context.specialInterest}ã¯æœ¬è­°æ¡ˆã«ã¤ã„ã¦ç‰¹åˆ¥ã®åˆ©å®³é–¢ä¿‚ã‚’æœ‰ã™ã‚‹ãŸã‚ã€æœ¬è­°æ¡ˆã®è­°æ±ºã«ã¯å‚åŠ ã—ãªã‹ã£ãŸã€‚\n\n`;
  }

  // æ±ºè­°çµæœ
  result += `è­°é•·ãŒæœ¬è­°æ¡ˆã«ã¤ã„ã¦è­°å ´ã«è«®ã£ãŸã¨ã“ã‚ã€${context.resolutionResult}ã—ãŸã€‚`;

  // è³›å¦è©³ç´°
  if (context.votingDetails) {
    result += `ï¼ˆ${context.votingDetails}ï¼‰`;
  }

  // ä»˜å¸¯æ¡ä»¶
  if (context.conditions) {
    result += `\nãŸã ã—ã€${context.conditions}ã‚’æ¡ä»¶ã¨ã™ã‚‹ã€‚`;
  }

  // æ³•çš„è¦ä»¶ãƒã‚§ãƒƒã‚¯
  const legalNotes = checkLegalRequirements(contentText, context.title);
  if (legalNotes.length > 0) {
    result += '\n\n' + legalNotes.join('\n');
  }

  // æ–‡ç« ã®ä¸€è²«æ€§ã‚’ç¢ºä¿
  result = ensureTextCoherence(result, context.title);

  return result;
}

// === HTMLã‹ã‚‰ãƒ†ã‚­ã‚¹ãƒˆå¤‰æ› ===
function htmlToText(html) {
  let text = html.toString();

  text = text.replace(/<br\s*\/?>/gi, '\n');
  text = text.replace(/<\/p>/gi, '\n\n');
  text = text.replace(/<\/div>/gi, '\n');
  text = text.replace(/<\/li>/gi, '\n');
  text = text.replace(/<li>/gi, 'ãƒ» ');
  text = text.replace(/<[^>]*>/g, '');
  text = text.replace(/&nbsp;/g, ' ');
  text = text.replace(/&lt;/g, '<');
  text = text.replace(/&gt;/g, '>');
  text = text.replace(/&amp;/g, '&');
  text = text.replace(/&quot;/g, '"');
  text = text.replace(/&#39;/g, "'");
  text = text.replace(/\n\n+/g, '\n\n');

  return text.trim();
}

// === è­°æ¡ˆç•ªå·é‡è¤‡ãƒã‚§ãƒƒã‚¯ ===
function isMotionNumberDuplicate(docId, motionNumber) {
  const ss = getSpreadsheet();
  const motionsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);

  if (!motionsSheet || motionsSheet.getLastRow() <= 1) {
    return false;
  }

  const data = motionsSheet.getDataRange().getValues();
  for (let i = 1; i < data.length; i++) {
    if (data[i][0] === docId && data[i][1].toString() === motionNumber.toString()) {
      return true;
    }
  }

  return false;
}

// === è­°æ¡ˆãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ç”Ÿæˆ ===
function previewMotion(inputHtml, title, useAI) {
  try {
    let previewText = inputHtml;

    if (useAI) {
      previewText = formatMotionWithAI(inputHtml, title);
    } else {
      previewText = htmlToText(inputHtml);
    }

    return {
      success: true,
      preview: previewText
    };

  } catch (error) {
    console.error('è­°æ¡ˆãƒ—ãƒ¬ãƒ“ãƒ¥ãƒ¼ã‚¨ãƒ©ãƒ¼:', error);
    return {
      success: false,
      error: error.toString(),
      preview: htmlToText(inputHtml)
    };
  }
}

// ==========================================
// æ‰¿èªç®¡ç†æ©Ÿèƒ½
// ==========================================

// === æ‰¿èªè€…ç™»éŒ² ===
function registerApprovers(docId, approverEmails, deadline) {
  try {
    const ss = getSpreadsheet();
    const approversSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.APPROVERS);

    // æ—¢å­˜ã®æ‰¿èªè€…ã‚’ã‚¯ãƒªã‚¢
    clearExistingApprovers(docId);

    // æ–°è¦æ‰¿èªè€…ã‚’è¿½åŠ 
    approverEmails.forEach(email => {
      if (validateEmail(email)) {
        approversSheet.appendRow([
          docId,
          email,
          CONFIG.APPROVAL_STATUS.PENDING,
          '',
          '',
          ''
        ]);
      }
    });

    // æœŸé™ã‚’Docsã‚·ãƒ¼ãƒˆã«è¨˜éŒ²
    updateDocDeadline(docId, deadline);

    addAuditLog('REGISTER_APPROVERS', docId, `æ‰¿èªè€…ç™»éŒ²: ${approverEmails.length}å`, true);

    return {
      success: true,
      message: `${approverEmails.length}åã®æ‰¿èªè€…ã‚’ç™»éŒ²ã—ã¾ã—ãŸ`
    };

  } catch (error) {
    console.error('æ‰¿èªè€…ç™»éŒ²ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('REGISTER_APPROVERS_ERROR', docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === æ‰¿èªå‡¦ç† ===
function processApproval(params) {
  try {
    const { docId, approverEmail, action, reason, token } = params;

    // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
    if (!validateApprovalToken(token, docId, approverEmail)) {
      throw new Error('ç„¡åŠ¹ãªæ‰¿èªãƒªãƒ³ã‚¯ã§ã™');
    }

    const ss = getSpreadsheet();
    const approversSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.APPROVERS);
    const data = approversSheet.getDataRange().getValues();

    let rowIndex = -1;
    for (let i = 1; i < data.length; i++) {
      if (data[i][0] === docId && data[i][1] === approverEmail) {
        rowIndex = i + 1;
        break;
      }
    }

    if (rowIndex === -1) {
      throw new Error('æ‰¿èªè€…ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
    }

    // æ—¢ã«å‡¦ç†æ¸ˆã¿ã‹ãƒã‚§ãƒƒã‚¯
    const currentStatus = data[rowIndex - 1][2];
    if (currentStatus !== CONFIG.APPROVAL_STATUS.PENDING) {
      throw new Error('æ—¢ã«æ‰¿èª/å´ä¸‹å‡¦ç†ãŒå®Œäº†ã—ã¦ã„ã¾ã™');
    }

    // ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹æ›´æ–°
    const newStatus = action === 'approve' ?
      CONFIG.APPROVAL_STATUS.APPROVED :
      CONFIG.APPROVAL_STATUS.REJECTED;

    approversSheet.getRange(rowIndex, 3).setValue(newStatus);
    approversSheet.getRange(rowIndex, 4).setValue(new Date());
    if (action === 'reject' && reason) {
      approversSheet.getRange(rowIndex, 5).setValue(reason);
    }

    // æ‰¿èªãƒ†ãƒ¼ãƒ–ãƒ«ã‚’ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã«åæ˜ 
    updateApprovalsTable(docId);

    // å…¨ä½“ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ã‚’é›†è¨ˆ
    updateDocumentStatus(docId);

    // ç›£æŸ»ãƒ­ã‚°
    const actionText = action === 'approve' ? 'æ‰¿èª' : 'å´ä¸‹';
    addAuditLog('PROCESS_APPROVAL', docId, `${actionText}: ${approverEmail}`, true);

    return {
      success: true,
      message: `${actionText}å‡¦ç†ãŒå®Œäº†ã—ã¾ã—ãŸ`
    };

  } catch (error) {
    console.error('æ‰¿èªå‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('PROCESS_APPROVAL_ERROR', params.docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === æ‰¿èªä¾é ¼é€ä¿¡ ===
function sendApprovalRequests(docId, customMessage) {
  try {
    const approvals = getApprovalsByDocId(docId);
    const docInfo = getDocumentInfo(docId);

    if (!docInfo) {
      throw new Error('ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆæƒ…å ±ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
    }

    // è­°æ¡ˆæƒ…å ±ã‚’å–å¾—
    const motions = getMotionsByDocId(docId);

    let successCount = 0;
    let failureCount = 0;

    approvals.forEach(approval => {
      if (approval.status === CONFIG.APPROVAL_STATUS.PENDING) {
        const result = sendApprovalNotificationWithMotions(
          approval.email,
          docId,
          docInfo,
          motions,
          customMessage,
          false
        );

        if (result.success) {
          successCount++;
          updateLastNotificationDate(docId, approval.email);
        } else {
          failureCount++;
        }
      }
    });

    // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹ã‚’ã€Œæ‰¿èªå¾…ã¡ã€ã«æ›´æ–°
    updateDocStatus(docId, CONFIG.STATUS.PENDING);

    addAuditLog('SEND_APPROVAL_REQUESTS', docId,
      `æ‰¿èªä¾é ¼é€ä¿¡: æˆåŠŸ${successCount}ä»¶ã€å¤±æ•—${failureCount}ä»¶`, true);

    return {
      success: true,
      message: `${successCount}åã«æ‰¿èªä¾é ¼ã‚’é€ä¿¡ã—ã¾ã—ãŸ`,
      successCount: successCount,
      failureCount: failureCount
    };

  } catch (error) {
    console.error('æ‰¿èªä¾é ¼é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('SEND_APPROVAL_REQUESTS_ERROR', docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === ãƒªãƒã‚¤ãƒ³ãƒ€ãƒ¼å‡¦ç† ===
function processReminders() {
  try {
    const ss = getSpreadsheet();
    const approversSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.APPROVERS);
    const docsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.DOCS);

    if (!approversSheet || approversSheet.getLastRow() <= 1) {
      return;
    }

    const approversData = approversSheet.getDataRange().getValues();
    const docsData = docsSheet.getDataRange().getValues();

    const properties = PropertiesService.getScriptProperties();
    const reminderInterval = parseInt(properties.getProperty('REMINDER_INTERVAL_HOURS') || '24');
    const warningHours = parseInt(properties.getProperty('WARNING_HOURS') || '24');
    const now = new Date();

    let reminderCount = 0;

    for (let i = 1; i < approversData.length; i++) {
      const approval = {
        docId: approversData[i][0],
        email: approversData[i][1],
        status: approversData[i][2],
        lastNotification: approversData[i][5]
      };

      // PENDINGçŠ¶æ…‹ã®ã¿å‡¦ç†
      if (approval.status !== CONFIG.APPROVAL_STATUS.PENDING) {
        continue;
      }

      // ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆæƒ…å ±å–å¾—
      let docInfo = null;
      for (let j = 1; j < docsData.length; j++) {
        if (docsData[j][0] === approval.docId) {
          docInfo = {
            title: docsData[j][3],
            url: docsData[j][4],
            deadline: docsData[j][6]
          };
          break;
        }
      }

      if (!docInfo || !docInfo.deadline) {
        continue;
      }

      // ãƒªãƒã‚¤ãƒ³ãƒ‰é€ä¿¡åˆ¤å®š
      let shouldSendReminder = false;
      let isWarning = false;

      const deadline = new Date(docInfo.deadline);
      const hoursUntilDeadline = (deadline - now) / (1000 * 60 * 60);

      // æœŸé™å‰è­¦å‘Šãƒã‚§ãƒƒã‚¯
      if (hoursUntilDeadline > 0 && hoursUntilDeadline <= warningHours) {
        isWarning = true;
        shouldSendReminder = true;
      }

      // é€šå¸¸ãƒªãƒã‚¤ãƒ³ãƒ‰ãƒã‚§ãƒƒã‚¯
      if (!shouldSendReminder && approval.lastNotification) {
        const lastNotification = new Date(approval.lastNotification);
        const hoursSinceLastNotification = (now - lastNotification) / (1000 * 60 * 60);

        if (hoursSinceLastNotification >= reminderInterval) {
          shouldSendReminder = true;
        }
      } else if (!shouldSendReminder && !approval.lastNotification) {
        shouldSendReminder = true;
      }

      // ãƒªãƒã‚¤ãƒ³ãƒ‰é€ä¿¡
      if (shouldSendReminder) {
        const result = sendApprovalNotification(
          approval.email,
          approval.docId,
          docInfo,
          null,
          isWarning
        );

        if (result.success) {
          approversSheet.getRange(i + 1, 6).setValue(now);
          reminderCount++;
        }
      }
    }

    // æœŸé™åˆ‡ã‚Œãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã®ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹æ›´æ–°
    checkAndUpdateExpiredDocuments();

    if (reminderCount > 0) {
      addAuditLog('PROCESS_REMINDERS', null, `ãƒªãƒã‚¤ãƒ³ãƒ€ãƒ¼é€ä¿¡: ${reminderCount}ä»¶`, true);
    }

  } catch (error) {
    console.error('ãƒªãƒã‚¤ãƒ³ãƒ€ãƒ¼å‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('PROCESS_REMINDERS_ERROR', null, error.toString(), false);
  }
}

// === ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹é›†è¨ˆ ===
function updateDocumentStatus(docId) {
  try {
    const approvals = getApprovalsByDocId(docId);

    if (approvals.length === 0) {
      return;
    }

    let approvedCount = 0;
    let rejectedCount = 0;
    let pendingCount = 0;

    approvals.forEach(approval => {
      switch (approval.status) {
        case CONFIG.APPROVAL_STATUS.APPROVED:
          approvedCount++;
          break;
        case CONFIG.APPROVAL_STATUS.REJECTED:
          rejectedCount++;
          break;
        case CONFIG.APPROVAL_STATUS.PENDING:
          pendingCount++;
          break;
      }
    });

    let newStatus = CONFIG.STATUS.PENDING;

    if (rejectedCount > 0) {
      newStatus = CONFIG.STATUS.REJECTED;
    } else if (pendingCount === 0 && approvedCount === approvals.length) {
      newStatus = CONFIG.STATUS.APPROVED;
      // æ‰¿èªå®Œäº†é€šçŸ¥ã‚’é€ä¿¡
      sendApprovalCompleteNotification(docId);
    } else if (pendingCount > 0) {
      newStatus = CONFIG.STATUS.PENDING;
    }

    updateDocStatus(docId, newStatus);

    return newStatus;

  } catch (error) {
    console.error('ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹é›†è¨ˆã‚¨ãƒ©ãƒ¼:', error);
    return null;
  }
}

// === æœŸé™åˆ‡ã‚Œãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆãƒã‚§ãƒƒã‚¯ ===
function checkAndUpdateExpiredDocuments() {
  try {
    const ss = getSpreadsheet();
    const docsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.DOCS);

    if (!docsSheet || docsSheet.getLastRow() <= 1) {
      return;
    }

    const data = docsSheet.getDataRange().getValues();
    const now = new Date();

    for (let i = 1; i < data.length; i++) {
      const docId = data[i][0];
      const deadline = data[i][6];
      const currentStatus = data[i][7];

      if (deadline && currentStatus === CONFIG.STATUS.PENDING) {
        const deadlineDate = new Date(deadline);
        if (deadlineDate < now) {
          docsSheet.getRange(i + 1, 8).setValue(CONFIG.STATUS.EXPIRED);

          const approvals = getApprovalsByDocId(docId);
          const pendingApprovers = approvals.filter(
            a => a.status === CONFIG.APPROVAL_STATUS.PENDING
          );

          if (pendingApprovers.length > 0) {
            notifyAdminAboutExpiredDocument(docId, pendingApprovers);
          }
        }
      }
    }

  } catch (error) {
    console.error('æœŸé™åˆ‡ã‚Œãƒã‚§ãƒƒã‚¯ã‚¨ãƒ©ãƒ¼:', error);
  }
}

// ==========================================
// é€šçŸ¥ç®¡ç†æ©Ÿèƒ½
// ==========================================

// === è­°æ¡ˆæƒ…å ±å–å¾— ===
function getMotionsByDocId(docId) {
  try {
    const ss = getSpreadsheet();
    const motionsSheet = ss.getSheetByName(CONFIG.SHEET_NAMES.MOTIONS);

    if (!motionsSheet || motionsSheet.getLastRow() <= 1) {
      return [];
    }

    const data = motionsSheet.getDataRange().getValues();
    const motions = [];

    for (let i = 1; i < data.length; i++) {
      if (data[i][0] === docId) {
        motions.push({
          motionNumber: data[i][1],
          title: data[i][2],
          content: data[i][4], // Generated text
          presenter: data[i][9] || '',
          resolutionResult: data[i][10] || 'å…¨å“¡ä¸€è‡´æ‰¿èª',
          votingDetails: data[i][11] || '',
          specialInterest: data[i][12] || '',
          conditions: data[i][13] || ''
        });
      }
    }

    return motions.sort((a, b) => {
      const numA = parseInt(a.motionNumber.replace(/[^0-9]/g, ''));
      const numB = parseInt(b.motionNumber.replace(/[^0-9]/g, ''));
      return numA - numB;
    });

  } catch (error) {
    console.error('è­°æ¡ˆæƒ…å ±å–å¾—ã‚¨ãƒ©ãƒ¼:', error);
    return [];
  }
}

// === æ‰¿èªä¾é ¼é€šçŸ¥ï¼ˆè­°æ¡ˆä»˜ãï¼‰ ===
function sendApprovalNotificationWithMotions(email, docId, docInfo, motions, customMessage, isWarning) {
  try {
    const properties = PropertiesService.getScriptProperties();
    const fromName = properties.getProperty('FROM_NAME') || 'è­°äº‹éŒ²ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ ';
    const replyTo = properties.getProperty('REPLY_TO') || Session.getActiveUser().getEmail();

    // æ‰¿èªãƒªãƒ³ã‚¯ç”Ÿæˆ
    const token = generateApprovalToken(docId, email);
    const scriptUrl = ScriptApp.getService().getUrl();

    // ä»¶åç”Ÿæˆ
    let subject = '';
    if (isWarning) {
      subject = `ã€æœŸé™å‰è­¦å‘Šã€‘è­°äº‹éŒ²æ‰¿èªä¾é ¼: ${docInfo.title}`;
    } else {
      subject = `ã€æ‰¿èªä¾é ¼ã€‘è­°äº‹éŒ²æ‰¿èªä¾é ¼: ${docInfo.title}`;
    }

    // æœ¬æ–‡ç”Ÿæˆï¼ˆè­°æ¡ˆæƒ…å ±ä»˜ãï¼‰
    const body = generateApprovalEmailBodyWithMotions({
      docInfo: docInfo,
      motions: motions,
      scriptUrl: scriptUrl,
      docId: docId,
      email: email,
      token: token,
      customMessage: customMessage,
      isWarning: isWarning
    });

    // ãƒ¡ãƒ¼ãƒ«é€ä¿¡
    GmailApp.sendEmail(email, subject, body.text, {
      htmlBody: body.html,
      name: fromName,
      replyTo: replyTo
    });

    addAuditLog('SEND_NOTIFICATION', docId, `é€šçŸ¥é€ä¿¡: ${email}`, true);

    return {
      success: true,
      message: 'é€šçŸ¥ã‚’é€ä¿¡ã—ã¾ã—ãŸ'
    };

  } catch (error) {
    console.error('é€šçŸ¥é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('SEND_NOTIFICATION_ERROR', docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === æ‰¿èªä¾é ¼é€šçŸ¥ï¼ˆå¾“æ¥ç‰ˆãƒ»å¾Œæ–¹äº’æ›æ€§ã®ãŸã‚æ®‹ã™ï¼‰ ===
function sendApprovalNotification(email, docId, docInfo, customMessage, isWarning) {
  try {
    const properties = PropertiesService.getScriptProperties();
    const fromName = properties.getProperty('FROM_NAME') || 'è­°äº‹éŒ²ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ ';
    const replyTo = properties.getProperty('REPLY_TO') || Session.getActiveUser().getEmail();

    // æ‰¿èªãƒªãƒ³ã‚¯ç”Ÿæˆ
    const token = generateApprovalToken(docId, email);
    const scriptUrl = ScriptApp.getService().getUrl();
    const approveUrl = `${scriptUrl}?action=approve&docId=${docId}&email=${email}&token=${token}`;
    const rejectUrl = `${scriptUrl}?action=reject&docId=${docId}&email=${email}&token=${token}`;

    // ä»¶åç”Ÿæˆ
    let subject = '';
    if (isWarning) {
      subject = `ã€æœŸé™å‰è­¦å‘Šã€‘è­°äº‹éŒ²æ‰¿èªä¾é ¼: ${docInfo.title}`;
    } else {
      subject = `ã€æ‰¿èªä¾é ¼ã€‘è­°äº‹éŒ²æ‰¿èªä¾é ¼: ${docInfo.title}`;
    }

    // æœ¬æ–‡ç”Ÿæˆ
    const body = generateApprovalEmailBody({
      docInfo: docInfo,
      approveUrl: approveUrl,
      rejectUrl: rejectUrl,
      customMessage: customMessage,
      isWarning: isWarning
    });

    // ãƒ¡ãƒ¼ãƒ«é€ä¿¡
    GmailApp.sendEmail(email, subject, body.text, {
      htmlBody: body.html,
      name: fromName,
      replyTo: replyTo
    });

    addAuditLog('SEND_NOTIFICATION', docId, `é€šçŸ¥é€ä¿¡: ${email}`, true);

    return {
      success: true,
      message: 'é€šçŸ¥ã‚’é€ä¿¡ã—ã¾ã—ãŸ'
    };

  } catch (error) {
    console.error('é€šçŸ¥é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('SEND_NOTIFICATION_ERROR', docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === æ‰¿èªå®Œäº†é€šçŸ¥ ===
function sendApprovalCompleteNotification(docId) {
  try {
    const docInfo = getDocumentInfo(docId);
    const approvals = getApprovalsByDocId(docId);

    if (!docInfo) {
      throw new Error('ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆæƒ…å ±ãŒè¦‹ã¤ã‹ã‚Šã¾ã›ã‚“');
    }

    const properties = PropertiesService.getScriptProperties();
    const applicantEmail = docInfo.applicant;
    const fromName = properties.getProperty('FROM_NAME') || 'è­°äº‹éŒ²ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ ';
    const replyTo = properties.getProperty('REPLY_TO') || Session.getActiveUser().getEmail();

    // ã‚¹ãƒ†ãƒ¼ã‚¿ã‚¹é›†è¨ˆ
    const summary = {
      total: approvals.length,
      approved: approvals.filter(a => a.status === CONFIG.APPROVAL_STATUS.APPROVED).length,
      rejected: approvals.filter(a => a.status === CONFIG.APPROVAL_STATUS.REJECTED).length,
      pending: approvals.filter(a => a.status === CONFIG.APPROVAL_STATUS.PENDING).length
    };

    let subject = '';
    let statusText = '';

    if (summary.rejected > 0) {
      subject = `ã€å·®æˆ»ã—ã€‘è­°äº‹éŒ²æ‰¿èªçµæœ: ${docInfo.title}`;
      statusText = 'å·®æˆ»ã—';
    } else if (summary.pending === 0 && summary.approved === summary.total) {
      subject = `ã€æ‰¿èªå®Œäº†ã€‘è­°äº‹éŒ²æ‰¿èªçµæœ: ${docInfo.title}`;
      statusText = 'æ‰¿èªå®Œäº†';
    } else {
      return;
    }

    // æœ¬æ–‡ç”Ÿæˆ
    const body = generateApprovalCompleteEmailBody({
      docInfo: docInfo,
      approvals: approvals,
      summary: summary,
      statusText: statusText
    });

    // ãƒ¡ãƒ¼ãƒ«é€ä¿¡
    GmailApp.sendEmail(applicantEmail, subject, body.text, {
      htmlBody: body.html,
      name: fromName,
      replyTo: replyTo
    });

    // å…¨æ‰¿èªè€…ã«ã‚‚é€šçŸ¥ï¼ˆè¨­å®šã«ã‚ˆã‚‹ï¼‰
    if (properties.getProperty('NOTIFY_ALL_ON_COMPLETE') === 'true') {
      approvals.forEach(approval => {
        GmailApp.sendEmail(approval.email, subject, body.text, {
          htmlBody: body.html,
          name: fromName,
          replyTo: replyTo
        });
      });
    }

    addAuditLog('SEND_COMPLETE_NOTIFICATION', docId, `å®Œäº†é€šçŸ¥é€ä¿¡: ${statusText}`, true);

    return {
      success: true,
      message: 'å®Œäº†é€šçŸ¥ã‚’é€ä¿¡ã—ã¾ã—ãŸ'
    };

  } catch (error) {
    console.error('å®Œäº†é€šçŸ¥é€ä¿¡ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('SEND_COMPLETE_NOTIFICATION_ERROR', docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === ç®¡ç†è€…é€šçŸ¥ï¼ˆæœŸé™åˆ‡ã‚Œï¼‰ ===
function notifyAdminAboutExpiredDocument(docId, pendingApprovers) {
  try {
    const docInfo = getDocumentInfo(docId);
    const properties = PropertiesService.getScriptProperties();
    const adminEmail = properties.getProperty('REPLY_TO') || Session.getActiveUser().getEmail();
    const fromName = properties.getProperty('FROM_NAME') || 'è­°äº‹éŒ²ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ ';

    const subject = `ã€æœŸé™è¶…éã€‘è­°äº‹éŒ²æ‰¿èªæœŸé™åˆ‡ã‚Œ: ${docInfo.title}`;

    let pendingList = '';
    pendingApprovers.forEach(approver => {
      pendingList += `  - ${approver.email}\n`;
    });

    const body = `
ç®¡ç†è€…æ§˜

ä»¥ä¸‹ã®è­°äº‹éŒ²ãŒæ‰¿èªæœŸé™ã‚’è¶…éã—ã¾ã—ãŸã€‚

ã€æ–‡æ›¸æƒ…å ±ã€‘
ã‚¿ã‚¤ãƒˆãƒ«: ${docInfo.title}
ä¼šè­°ç¨®åˆ¥: ${docInfo.meetingType}
ä¼šè­°æ—¥: ${docInfo.meetingDate}
æœŸé™: ${formatDate(new Date(docInfo.deadline))}

ã€æœªæ‰¿èªè€…ã€‘
${pendingList}

ã€æ–‡æ›¸URLã€‘
${docInfo.url}

å¯¾å¿œã‚’ãŠé¡˜ã„ã„ãŸã—ã¾ã™ã€‚

${fromName}
    `.trim();

    GmailApp.sendEmail(adminEmail, subject, body, {
      name: fromName
    });

    addAuditLog('NOTIFY_ADMIN_EXPIRED', docId, `ç®¡ç†è€…é€šçŸ¥: æœŸé™è¶…é`, true);

  } catch (error) {
    console.error('ç®¡ç†è€…é€šçŸ¥ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('NOTIFY_ADMIN_EXPIRED_ERROR', docId, error.toString(), false);
  }
}

// === ãƒ¡ãƒ¼ãƒ«æœ¬æ–‡ç”Ÿæˆï¼ˆè­°æ¡ˆæƒ…å ±ä»˜ãæ‰¿èªä¾é ¼ï¼‰ ===
function generateApprovalEmailBodyWithMotions(params) {
  const {
    docInfo,
    motions,
    scriptUrl,
    docId,
    email,
    token,
    customMessage,
    isWarning
  } = params;

  const deadlineText = docInfo.deadline ?
    formatDate(new Date(docInfo.deadline)) :
    'æœŸé™ãªã—';

  const warningText = isWarning ?
    '<p style="color: red; font-weight: bold;">â€»æ‰¿èªæœŸé™ãŒè¿‘ã¥ã„ã¦ã„ã¾ã™</p>' :
    '';

  const customMessageText = customMessage ?
    `<p>${customMessage}</p>` :
    '';

  // è­°æ¡ˆãƒªã‚¹ãƒˆã®HTMLç”Ÿæˆ
  let motionsHtml = '';
  let motionsText = '';

  if (motions && motions.length > 0) {
    motionsHtml = '<h3>è­°æ¡ˆä¸€è¦§</h3><div style="margin: 20px 0;">';
    motionsText = '\n\nã€è­°æ¡ˆä¸€è¦§ã€‘\n';

    motions.forEach((motion, index) => {
      const motionApproveUrl = `${scriptUrl}?action=approveMotion&docId=${docId}&email=${email}&token=${token}&motionNumber=${encodeURIComponent(motion.motionNumber)}`;
      const motionRejectUrl = `${scriptUrl}?action=rejectMotion&docId=${docId}&email=${email}&token=${token}&motionNumber=${encodeURIComponent(motion.motionNumber)}`;

      motionsHtml += `
        <div style="border: 1px solid #ddd; border-radius: 5px; padding: 15px; margin-bottom: 15px;">
          <h4 style="margin-top: 0; color: #333;">${motion.motionNumber}. ${motion.title}</h4>
          ${motion.presenter ? `<p style="margin: 5px 0;"><strong>ææ¡ˆè€…:</strong> ${motion.presenter}</p>` : ''}
          <div style="background-color: #f9f9f9; padding: 10px; border-radius: 3px; margin: 10px 0;">
            ${motion.content.replace(/\n/g, '<br>')}
          </div>
          ${motion.resolutionResult ? `<p style="margin: 5px 0;"><strong>æ±ºè­°æ–¹æ³•:</strong> ${motion.resolutionResult}</p>` : ''}
          ${motion.specialInterest ? `<p style="margin: 5px 0;"><strong>ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚:</strong> ${motion.specialInterest}</p>` : ''}
          ${motion.conditions ? `<p style="margin: 5px 0;"><strong>æ¡ä»¶ãƒ»ç•™æ„äº‹é …:</strong> ${motion.conditions}</p>` : ''}
          <div style="margin-top: 10px;">
            <a href="${motionApproveUrl}" style="display: inline-block; padding: 8px 16px; margin-right: 10px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 4px; font-size: 14px;">ã“ã®è­°æ¡ˆã‚’æ‰¿èª</a>
            <a href="${motionRejectUrl}" style="display: inline-block; padding: 8px 16px; background-color: #f44336; color: white; text-decoration: none; border-radius: 4px; font-size: 14px;">ã“ã®è­°æ¡ˆã‚’å´ä¸‹</a>
          </div>
        </div>
      `;

      motionsText += `\n${motion.motionNumber}. ${motion.title}\n`;
      if (motion.presenter) motionsText += `ææ¡ˆè€…: ${motion.presenter}\n`;
      motionsText += `å†…å®¹:\n${motion.content}\n`;
      if (motion.resolutionResult) motionsText += `æ±ºè­°æ–¹æ³•: ${motion.resolutionResult}\n`;
      if (motion.specialInterest) motionsText += `ç‰¹åˆ¥åˆ©å®³é–¢ä¿‚: ${motion.specialInterest}\n`;
      if (motion.conditions) motionsText += `æ¡ä»¶ãƒ»ç•™æ„äº‹é …: ${motion.conditions}\n`;
      motionsText += `æ‰¿èª: ${motionApproveUrl}\n`;
      motionsText += `å´ä¸‹: ${motionRejectUrl}\n`;
      motionsText += '---\n';
    });

    motionsHtml += '</div>';
  }

  // ä¸€æ‹¬æ‰¿èªãƒ»å´ä¸‹URL
  const bulkApproveUrl = `${scriptUrl}?action=approveAll&docId=${docId}&email=${email}&token=${token}`;
  const bulkRejectUrl = `${scriptUrl}?action=rejectAll&docId=${docId}&email=${email}&token=${token}`;

  const htmlBody = `
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; }
    .container { max-width: 700px; margin: 0 auto; padding: 20px; }
    .header { background-color: #f4f4f4; padding: 20px; border-radius: 5px; }
    .content { margin: 20px 0; }
    .button { display: inline-block; padding: 10px 20px; margin: 10px 5px;
              text-decoration: none; border-radius: 5px; font-weight: bold; }
    .approve { background-color: #4CAF50; color: white; }
    .reject { background-color: #f44336; color: white; }
    .bulk-approve { background-color: #2196F3; color: white; }
    .info-table { width: 100%; border-collapse: collapse; }
    .info-table td { padding: 8px; border-bottom: 1px solid #ddd; }
    .info-table td:first-child { font-weight: bold; width: 30%; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>è­°äº‹éŒ²æ‰¿èªä¾é ¼</h2>
      ${warningText}
    </div>

    <div class="content">
      ${customMessageText}

      <p>ä»¥ä¸‹ã®è­°äº‹éŒ²ã«ã¤ã„ã¦æ‰¿èªã‚’ãŠé¡˜ã„ã„ãŸã—ã¾ã™ã€‚</p>

      <table class="info-table">
        <tr>
          <td>ã‚¿ã‚¤ãƒˆãƒ«:</td>
          <td>${docInfo.title}</td>
        </tr>
        <tr>
          <td>ä¼šè­°ç¨®åˆ¥:</td>
          <td>${docInfo.meetingType || ''}</td>
        </tr>
        <tr>
          <td>ä¼šè­°æ—¥:</td>
          <td>${docInfo.meetingDate || ''}</td>
        </tr>
        <tr>
          <td>æ‰¿èªæœŸé™:</td>
          <td style="color: ${isWarning ? 'red' : 'black'}; font-weight: ${isWarning ? 'bold' : 'normal'};">
            ${deadlineText}
          </td>
        </tr>
      </table>

      <p>
        <a href="${docInfo.url}" target="_blank">ğŸ“„ è­°äº‹éŒ²å…¨æ–‡ã‚’ç¢ºèªã™ã‚‹</a>
      </p>

      ${motionsHtml}

      <div style="margin: 30px 0; padding: 20px; background-color: #f0f0f0; border-radius: 5px; text-align: center;">
        <h3 style="margin-top: 0;">ä¸€æ‹¬æ“ä½œ</h3>
        <p>ã™ã¹ã¦ã®è­°æ¡ˆã«å¯¾ã—ã¦ä¸€æ‹¬ã§æ‰¿èªãƒ»å´ä¸‹ã‚’è¡Œã†ã“ã¨ãŒã§ãã¾ã™ã€‚</p>
        <div>
          <a href="${bulkApproveUrl}" class="button bulk-approve" style="background-color: #2196F3;">ã™ã¹ã¦ã®è­°æ¡ˆã‚’æ‰¿èª</a>
          <a href="${bulkRejectUrl}" class="button reject">ã™ã¹ã¦ã®è­°æ¡ˆã‚’å´ä¸‹</a>
        </div>
      </div>

      <p style="font-size: 12px; color: #666;">
        â€»ãƒœã‚¿ãƒ³ãŒå‹•ä½œã—ãªã„å ´åˆã¯ã€ãƒªãƒ³ã‚¯ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ãƒ–ãƒ©ã‚¦ã‚¶ã§é–‹ã„ã¦ãã ã•ã„ã€‚<br>
        â€»å´ä¸‹ã®å ´åˆã¯ç†ç”±ã®å…¥åŠ›ç”»é¢ãŒè¡¨ç¤ºã•ã‚Œã¾ã™ã€‚<br>
        â€»å€‹åˆ¥ã®è­°æ¡ˆã”ã¨ã«æ‰¿èªãƒ»å´ä¸‹ã™ã‚‹ã“ã¨ã‚‚ã€ä¸€æ‹¬ã§å‡¦ç†ã™ã‚‹ã“ã¨ã‚‚å¯èƒ½ã§ã™ã€‚
      </p>
    </div>
  </div>
</body>
</html>
  `.trim();

  const textBody = `
è­°äº‹éŒ²æ‰¿èªä¾é ¼
${isWarning ? 'â€»æ‰¿èªæœŸé™ãŒè¿‘ã¥ã„ã¦ã„ã¾ã™' : ''}

${customMessage || ''}

ä»¥ä¸‹ã®è­°äº‹éŒ²ã«ã¤ã„ã¦æ‰¿èªã‚’ãŠé¡˜ã„ã„ãŸã—ã¾ã™ã€‚

ã€æ–‡æ›¸æƒ…å ±ã€‘
ã‚¿ã‚¤ãƒˆãƒ«: ${docInfo.title}
ä¼šè­°ç¨®åˆ¥: ${docInfo.meetingType || ''}
ä¼šè­°æ—¥: ${docInfo.meetingDate || ''}
æ‰¿èªæœŸé™: ${deadlineText}

ã€æ–‡æ›¸URLã€‘
${docInfo.url}
${motionsText}

ã€ä¸€æ‹¬æ“ä½œã€‘
ã™ã¹ã¦ã®è­°æ¡ˆã‚’æ‰¿èª: ${bulkApproveUrl}
ã™ã¹ã¦ã®è­°æ¡ˆã‚’å´ä¸‹: ${bulkRejectUrl}

â€»å´ä¸‹ã®å ´åˆã¯ç†ç”±ã®å…¥åŠ›ãŒå¿…è¦ã§ã™ã€‚
â€»å€‹åˆ¥ã®è­°æ¡ˆã”ã¨ã«æ‰¿èªãƒ»å´ä¸‹ã™ã‚‹ã“ã¨ã‚‚ã€ä¸€æ‹¬ã§å‡¦ç†ã™ã‚‹ã“ã¨ã‚‚å¯èƒ½ã§ã™ã€‚
  `.trim();

  return {
    html: htmlBody,
    text: textBody
  };
}

// === ãƒ¡ãƒ¼ãƒ«æœ¬æ–‡ç”Ÿæˆï¼ˆæ‰¿èªä¾é ¼ï¼‰ ===
function generateApprovalEmailBody(params) {
  const {
    docInfo,
    approveUrl,
    rejectUrl,
    customMessage,
    isWarning
  } = params;

  const deadlineText = docInfo.deadline ?
    formatDate(new Date(docInfo.deadline)) :
    'æœŸé™ãªã—';

  const warningText = isWarning ?
    '<p style="color: red; font-weight: bold;">â€»æ‰¿èªæœŸé™ãŒè¿‘ã¥ã„ã¦ã„ã¾ã™</p>' :
    '';

  const customMessageText = customMessage ?
    `<p>${customMessage}</p>` :
    '';

  const htmlBody = `
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; }
    .container { max-width: 600px; margin: 0 auto; padding: 20px; }
    .header { background-color: #f4f4f4; padding: 20px; border-radius: 5px; }
    .content { margin: 20px 0; }
    .button { display: inline-block; padding: 10px 20px; margin: 10px 5px;
              text-decoration: none; border-radius: 5px; font-weight: bold; }
    .approve { background-color: #4CAF50; color: white; }
    .reject { background-color: #f44336; color: white; }
    .info-table { width: 100%; border-collapse: collapse; }
    .info-table td { padding: 8px; border-bottom: 1px solid #ddd; }
    .info-table td:first-child { font-weight: bold; width: 30%; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>è­°äº‹éŒ²æ‰¿èªä¾é ¼</h2>
      ${warningText}
    </div>

    <div class="content">
      ${customMessageText}

      <p>ä»¥ä¸‹ã®è­°äº‹éŒ²ã«ã¤ã„ã¦æ‰¿èªã‚’ãŠé¡˜ã„ã„ãŸã—ã¾ã™ã€‚</p>

      <table class="info-table">
        <tr>
          <td>ã‚¿ã‚¤ãƒˆãƒ«:</td>
          <td>${docInfo.title}</td>
        </tr>
        <tr>
          <td>ä¼šè­°ç¨®åˆ¥:</td>
          <td>${docInfo.meetingType || ''}</td>
        </tr>
        <tr>
          <td>ä¼šè­°æ—¥:</td>
          <td>${docInfo.meetingDate || ''}</td>
        </tr>
        <tr>
          <td>æ‰¿èªæœŸé™:</td>
          <td style="color: ${isWarning ? 'red' : 'black'}; font-weight: ${isWarning ? 'bold' : 'normal'};">
            ${deadlineText}
          </td>
        </tr>
      </table>

      <p>
        <a href="${docInfo.url}" target="_blank">ğŸ“„ è­°äº‹éŒ²ã‚’ç¢ºèªã™ã‚‹</a>
      </p>

      <div style="margin: 30px 0; text-align: center;">
        <a href="${approveUrl}" class="button approve">æ‰¿èªã™ã‚‹</a>
        <a href="${rejectUrl}" class="button reject">å´ä¸‹ã™ã‚‹</a>
      </div>

      <p style="font-size: 12px; color: #666;">
        â€»ãƒœã‚¿ãƒ³ãŒå‹•ä½œã—ãªã„å ´åˆã¯ã€ãƒªãƒ³ã‚¯ã‚’ã‚³ãƒ”ãƒ¼ã—ã¦ãƒ–ãƒ©ã‚¦ã‚¶ã§é–‹ã„ã¦ãã ã•ã„ã€‚<br>
        â€»å´ä¸‹ã®å ´åˆã¯ç†ç”±ã®å…¥åŠ›ç”»é¢ãŒè¡¨ç¤ºã•ã‚Œã¾ã™ã€‚
      </p>
    </div>
  </div>
</body>
</html>
  `.trim();

  const textBody = `
è­°äº‹éŒ²æ‰¿èªä¾é ¼
${isWarning ? 'â€»æ‰¿èªæœŸé™ãŒè¿‘ã¥ã„ã¦ã„ã¾ã™' : ''}

${customMessage || ''}

ä»¥ä¸‹ã®è­°äº‹éŒ²ã«ã¤ã„ã¦æ‰¿èªã‚’ãŠé¡˜ã„ã„ãŸã—ã¾ã™ã€‚

ã€æ–‡æ›¸æƒ…å ±ã€‘
ã‚¿ã‚¤ãƒˆãƒ«: ${docInfo.title}
ä¼šè­°ç¨®åˆ¥: ${docInfo.meetingType || ''}
ä¼šè­°æ—¥: ${docInfo.meetingDate || ''}
æ‰¿èªæœŸé™: ${deadlineText}

ã€æ–‡æ›¸URLã€‘
${docInfo.url}

ã€æ‰¿èªã€‘
${approveUrl}

ã€å´ä¸‹ã€‘
${rejectUrl}

â€»å´ä¸‹ã®å ´åˆã¯ç†ç”±ã®å…¥åŠ›ãŒå¿…è¦ã§ã™ã€‚
  `.trim();

  return {
    html: htmlBody,
    text: textBody
  };
}

// === ãƒ¡ãƒ¼ãƒ«æœ¬æ–‡ç”Ÿæˆï¼ˆæ‰¿èªå®Œäº†ï¼‰ ===
function generateApprovalCompleteEmailBody(params) {
  const {
    docInfo,
    approvals,
    summary,
    statusText
  } = params;

  let approvalTableRows = '';
  approvals.forEach(approval => {
    let statusLabel = '';
    let statusColor = '';

    switch (approval.status) {
      case CONFIG.APPROVAL_STATUS.APPROVED:
        statusLabel = 'æ‰¿èª';
        statusColor = 'green';
        break;
      case CONFIG.APPROVAL_STATUS.REJECTED:
        statusLabel = 'å´ä¸‹';
        statusColor = 'red';
        break;
      case CONFIG.APPROVAL_STATUS.PENDING:
        statusLabel = 'ä¿ç•™ä¸­';
        statusColor = 'orange';
        break;
    }

    approvalTableRows += `
      <tr>
        <td>${approval.email}</td>
        <td style="color: ${statusColor}; font-weight: bold;">${statusLabel}</td>
        <td>${approval.approvalDate ? formatDate(new Date(approval.approvalDate)) : '-'}</td>
        <td>${approval.rejectReason || '-'}</td>
      </tr>
    `;
  });

  const htmlBody = `
<!DOCTYPE html>
<html>
<head>
  <style>
    body { font-family: Arial, sans-serif; line-height: 1.6; }
    .container { max-width: 700px; margin: 0 auto; padding: 20px; }
    .header { background-color: #f4f4f4; padding: 20px; border-radius: 5px; }
    .status { font-size: 18px; font-weight: bold; padding: 10px;
              border-radius: 5px; text-align: center; margin: 20px 0; }
    .approved { background-color: #d4edda; color: #155724; }
    .rejected { background-color: #f8d7da; color: #721c24; }
    .summary { margin: 20px 0; padding: 15px; background-color: #f9f9f9; border-radius: 5px; }
    .approval-table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    .approval-table th { background-color: #e9e9e9; padding: 10px; text-align: left; }
    .approval-table td { padding: 8px; border-bottom: 1px solid #ddd; }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>è­°äº‹éŒ²æ‰¿èªçµæœé€šçŸ¥</h2>
    </div>

    <div class="status ${statusText === 'æ‰¿èªå®Œäº†' ? 'approved' : 'rejected'}">
      ${statusText}
    </div>

    <div class="summary">
      <h3>æ‰¿èªçŠ¶æ³ã‚µãƒãƒªãƒ¼</h3>
      <p>
        æ‰¿èªè€…æ•°: ${summary.total}å<br>
        æ‰¿èª: ${summary.approved}å<br>
        å´ä¸‹: ${summary.rejected}å<br>
        ä¿ç•™: ${summary.pending}å
      </p>
    </div>

    <h3>æ–‡æ›¸æƒ…å ±</h3>
    <p>
      ã‚¿ã‚¤ãƒˆãƒ«: ${docInfo.title}<br>
      ä¼šè­°ç¨®åˆ¥: ${docInfo.meetingType || ''}<br>
      ä¼šè­°æ—¥: ${docInfo.meetingDate || ''}<br>
      <a href="${docInfo.url}" target="_blank">ğŸ“„ è­°äº‹éŒ²ã‚’ç¢ºèªã™ã‚‹</a>
    </p>

    <h3>æ‰¿èªè©³ç´°</h3>
    <table class="approval-table">
      <thead>
        <tr>
          <th>æ‰¿èªè€…</th>
          <th>çŠ¶æ…‹</th>
          <th>æ—¥æ™‚</th>
          <th>ç†ç”±</th>
        </tr>
      </thead>
      <tbody>
        ${approvalTableRows}
      </tbody>
    </table>
  </div>
</body>
</html>
  `.trim();

  const textBody = `
è­°äº‹éŒ²æ‰¿èªçµæœé€šçŸ¥

ã€çµæœã€‘ ${statusText}

ã€æ‰¿èªçŠ¶æ³ã‚µãƒãƒªãƒ¼ã€‘
æ‰¿èªè€…æ•°: ${summary.total}å
æ‰¿èª: ${summary.approved}å
å´ä¸‹: ${summary.rejected}å
ä¿ç•™: ${summary.pending}å

ã€æ–‡æ›¸æƒ…å ±ã€‘
ã‚¿ã‚¤ãƒˆãƒ«: ${docInfo.title}
ä¼šè­°ç¨®åˆ¥: ${docInfo.meetingType || ''}
ä¼šè­°æ—¥: ${docInfo.meetingDate || ''}

ã€æ–‡æ›¸URLã€‘
${docInfo.url}

ã€æ‰¿èªè©³ç´°ã€‘
${approvals.map(a => {
  let status = '';
  switch (a.status) {
    case CONFIG.APPROVAL_STATUS.APPROVED: status = 'æ‰¿èª'; break;
    case CONFIG.APPROVAL_STATUS.REJECTED: status = 'å´ä¸‹'; break;
    case CONFIG.APPROVAL_STATUS.PENDING: status = 'ä¿ç•™ä¸­'; break;
  }
  return `${a.email}: ${status} ${a.rejectReason ? `(ç†ç”±: ${a.rejectReason})` : ''}`;
}).join('\n')}
  `.trim();

  return {
    html: htmlBody,
    text: textBody
  };
}

// === Web App ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆ ===
function doGet(e) {
  const params = e.parameter;
  const action = params.action;
  const docId = params.docId;
  const email = params.email;
  const token = params.token;

  if (!action || !docId || !email || !token) {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªãƒªãƒ³ã‚¯ã§ã™');
  }

  if (action === 'approve') {
    return handleApprovalLink(docId, email, token, true);
  } else if (action === 'reject') {
    return handleRejectLink(docId, email, token);
  } else {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã§ã™');
  }
}

function handleApprovalLink(docId, email, token, isApprove) {
  const result = processApproval({
    docId: docId,
    approverEmail: email,
    action: isApprove ? 'approve' : 'reject',
    token: token
  });

  if (result.success) {
    const message = isApprove ? 'æ‰¿èªãŒå®Œäº†ã—ã¾ã—ãŸ' : 'å´ä¸‹ãŒå®Œäº†ã—ã¾ã—ãŸ';
    return HtmlService.createHtmlOutput(`
      <html>
        <head>
          <style>
            body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
            .success { color: green; font-size: 24px; margin: 20px; }
          </style>
        </head>
        <body>
          <div class="success">âœ“ ${message}</div>
          <p>ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã‚’é–‰ã˜ã¦ãã ã•ã„</p>
        </body>
      </html>
    `);
  } else {
    return HtmlService.createHtmlOutput(`
      <html>
        <head>
          <style>
            body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
            .error { color: red; font-size: 18px; margin: 20px; }
          </style>
        </head>
        <body>
          <div class="error">ã‚¨ãƒ©ãƒ¼: ${result.error}</div>
        </body>
      </html>
    `);
  }
}

function handleRejectLink(docId, email, token) {
  // å´ä¸‹ç†ç”±å…¥åŠ›ãƒ•ã‚©ãƒ¼ãƒ ã‚’è¡¨ç¤º
  return HtmlService.createHtmlOutput(`
    <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 30px; max-width: 600px; margin: 0 auto; }
          h2 { color: #333; }
          textarea { width: 100%; height: 100px; margin: 10px 0; }
          button { padding: 10px 20px; margin: 10px 5px; font-size: 16px; }
          .submit { background-color: #f44336; color: white; border: none; border-radius: 5px; }
          .cancel { background-color: #ccc; color: #333; border: none; border-radius: 5px; }
        </style>
      </head>
      <body>
        <h2>å´ä¸‹ç†ç”±ã®å…¥åŠ›</h2>
        <p>è­°äº‹éŒ²ã‚’å´ä¸‹ã™ã‚‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚</p>
        <textarea id="reason" placeholder="å´ä¸‹ç†ç”±ã‚’å…¥åŠ›..."></textarea>
        <div>
          <button class="submit" onclick="submitRejection()">å´ä¸‹ã™ã‚‹</button>
          <button class="cancel" onclick="window.close()">ã‚­ãƒ£ãƒ³ã‚»ãƒ«</button>
        </div>

        <script>
          function submitRejection() {
            const reason = document.getElementById('reason').value;
            if (!reason.trim()) {
              alert('å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
              return;
            }

            google.script.run
              .withSuccessHandler(function(result) {
                if (result.success) {
                  document.body.innerHTML = '<div style="text-align:center; padding:50px;"><h2 style="color:green;">âœ“ å´ä¸‹ãŒå®Œäº†ã—ã¾ã—ãŸ</h2><p>ã‚¦ã‚£ãƒ³ãƒ‰ã‚¦ã‚’é–‰ã˜ã¦ãã ã•ã„</p></div>';
                } else {
                  alert('ã‚¨ãƒ©ãƒ¼: ' + result.error);
                }
              })
              .processApproval({
                docId: '${docId}',
                approverEmail: '${email}',
                action: 'reject',
                reason: reason,
                token: '${token}'
              });
          }
        </script>
      </body>
    </html>
  `).setSandboxMode(HtmlService.SandboxMode.IFRAME);
}

