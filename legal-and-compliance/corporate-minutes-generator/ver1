// === OpenAIæ¥ç¶šãƒ†ã‚¹ãƒˆ ===
function testOpenAIConnection(apiKey, _model) {
  try {
    const url = 'https://api.openai.com/v1/chat/completions';
    // ãƒ¢ãƒ‡ãƒ«ã¯GPT-5ã«å›ºå®š
    const payload = {
      model: 'gpt-5',
      messages: [
        {
          role: 'system',
          content: 'You are a helpful assistant.'
        },
        {
          role: 'user',
          content: 'ãƒ†ã‚¹ãƒˆæ¥ç¶šã§ã™ã€‚ã€Œæ¥ç¶šæˆåŠŸã€ã¨è¿”ç­”ã—ã¦ãã ã•ã„ã€‚'
        }
      ],
      temperature: 0.3,
      max_tokens: 100
    };

    const options = {
      method: 'post',
      headers: {
        'Authorization': `Bearer ${apiKey}`,
        'Content-Type': 'application/json'
      },
      payload: JSON.stringify(payload),
      muteHttpExceptions: true
    };

    const response = UrlFetchApp.fetch(url, options);
    const responseCode = response.getResponseCode();

    if (responseCode === 200) {
      const jsonResponse = JSON.parse(response.getContentText());
      return {
        success: true,
        message: 'OpenAI APIæ¥ç¶šæˆåŠŸ',
        response: jsonResponse.choices[0].message.content
      };
    } else {
      const errorResponse = JSON.parse(response.getContentText());
      return {
        success: false,
        error: errorResponse.error?.message || 'APIæ¥ç¶šã‚¨ãƒ©ãƒ¼'
      };
    }

  } catch (error) {
    console.error('OpenAIæ¥ç¶šãƒ†ã‚¹ãƒˆã‚¨ãƒ©ãƒ¼:', error);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// ==========================================
// Web App ã‚¨ãƒ³ãƒ‰ãƒã‚¤ãƒ³ãƒˆ
// ==========================================

// === Web App ãƒ¡ã‚¤ãƒ³ã‚¨ãƒ³ãƒˆãƒªãƒ¼ãƒã‚¤ãƒ³ãƒˆ ===
function doGet(e) {
  const params = e.parameter;
  const action = params.action;
  const docId = params.docId;
  const email = params.email;
  const token = params.token;
  const motionNumber = params.motionNumber;

  if (!action || !docId || !email || !token) {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªãƒªãƒ³ã‚¯ã§ã™');
  }

  // ã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã‚¿ã‚¤ãƒ—ã«ã‚ˆã‚‹å‡¦ç†åˆ†å²
  switch (action) {
    case 'approve':
      return handleApprovalLink(docId, email, token, true);
    case 'reject':
      return handleRejectLink(docId, email, token);
    case 'approveMotion':
      return handleMotionApproval(docId, email, token, motionNumber, true);
    case 'rejectMotion':
      return handleMotionApproval(docId, email, token, motionNumber, false);
    case 'approveAll':
      return handleBulkApproval(docId, email, token, true);
    case 'rejectAll':
      return handleBulkApproval(docId, email, token, false);
    default:
      return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªã‚¢ã‚¯ã‚·ãƒ§ãƒ³ã§ã™');
  }
}

// === é€šå¸¸ã®æ‰¿èªãƒªãƒ³ã‚¯å‡¦ç† ===
function handleApprovalLink(docId, email, token, isApprove) {
  const result = processApproval({
    docId: docId,
    approverEmail: email,
    action: isApprove ? 'approve' : 'reject',
    token: token
  });

  if (result.success) {
    const message = isApprove ? 'æ‰¿èªãŒå®Œäº†ã—ã¾ã—ãŸ' : 'å´ä¸‹ãŒå®Œäº†ã—ã¾ã—ãŸ';
    return HtmlService.createHtmlOutput(`
      <!DOCTYPE html>
      <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 20px; text-align: center; }
          h2 { color: ${isApprove ? '#4CAF50' : '#f44336'}; }
        </style>
      </head>
      <body>
        <h2>${message}</h2>
        <p>${result.message}</p>
      </body>
      </html>
    `);
  } else {
    return HtmlService.createHtmlOutput('ã‚¨ãƒ©ãƒ¼: ' + result.error);
  }
}

// === å´ä¸‹ãƒªãƒ³ã‚¯å‡¦ç†ï¼ˆç†ç”±å…¥åŠ›ãƒ•ã‚©ãƒ¼ãƒ è¡¨ç¤ºï¼‰ ===
function handleRejectLink(docId, email, token) {
  // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
  if (!validateApprovalToken(token, docId, email)) {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªãƒˆãƒ¼ã‚¯ãƒ³ã§ã™ã€‚ãƒªãƒ³ã‚¯ã®æœ‰åŠ¹æœŸé™ãŒåˆ‡ã‚Œã¦ã„ã‚‹å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚');
  }

  const html = `
    <!DOCTYPE html>
    <html>
    <head>
      <style>
        body { font-family: Arial, sans-serif; padding: 20px; max-width: 600px; margin: 0 auto; }
        h2 { color: #333; }
        .form-group { margin: 20px 0; }
        label { display: block; margin-bottom: 5px; font-weight: bold; }
        textarea { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; }
        button { padding: 10px 20px; background-color: #f44336; color: white; border: none;
                 border-radius: 4px; cursor: pointer; font-size: 16px; }
        button:hover { background-color: #da190b; }
      </style>
    </head>
    <body>
      <h2>è­°äº‹éŒ²å´ä¸‹</h2>
      <div class="form-group">
        <label for="reason">å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„:</label>
        <textarea id="reason" rows="5" placeholder="å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"></textarea>
      </div>
      <button onclick="submitRejection()">å´ä¸‹ã‚’ç¢ºå®š</button>
      <script>
        function submitRejection() {
          const reason = document.getElementById('reason').value.trim();
          if (!reason) {
            alert('å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
            return;
          }
          google.script.run.withSuccessHandler(onSuccess)
            .withFailureHandler(onError)
            .processApproval({
              docId: '${docId}',
              approverEmail: '${email}',
              action: 'reject',
              rejectReason: reason,
              token: '${token}'
            });
        }
        function onSuccess(result) {
          if (result.success) {
            document.body.innerHTML = '<h2>å´ä¸‹å®Œäº†</h2><p>' + result.message + '</p>';
          } else {
            alert('ã‚¨ãƒ©ãƒ¼: ' + result.error);
          }
        }
        function onError(error) {
          alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ' + error);
        }
      </script>
    </body>
    </html>
  `;
  return HtmlService.createHtmlOutput(html);
}

// === å€‹åˆ¥è­°æ¡ˆã®æ‰¿èªå‡¦ç† ===
function handleMotionApproval(docId, email, token, motionNumber, isApprove) {
  // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
  if (!validateApprovalToken(token, docId, email)) {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªãƒˆãƒ¼ã‚¯ãƒ³ã§ã™ã€‚ãƒªãƒ³ã‚¯ã®æœ‰åŠ¹æœŸé™ãŒåˆ‡ã‚Œã¦ã„ã‚‹å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚');
  }

  const actionText = isApprove ? 'æ‰¿èª' : 'å´ä¸‹';

  // å´ä¸‹ã®å ´åˆã¯ç†ç”±å…¥åŠ›ãƒ•ã‚©ãƒ¼ãƒ ã‚’è¡¨ç¤º
  if (!isApprove) {
    const html = `
      <!DOCTYPE html>
      <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 20px; max-width: 600px; margin: 0 auto; }
          h2 { color: #333; }
          .form-group { margin: 20px 0; }
          label { display: block; margin-bottom: 5px; font-weight: bold; }
          textarea { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; }
          button { padding: 10px 20px; background-color: #f44336; color: white; border: none;
                   border-radius: 4px; cursor: pointer; font-size: 16px; }
          button:hover { background-color: #da190b; }
          .info { background-color: #f9f9f9; padding: 15px; border-radius: 5px; margin-bottom: 20px; }
        </style>
      </head>
      <body>
        <h2>è­°æ¡ˆç¬¬${motionNumber}å· å´ä¸‹ç†ç”±å…¥åŠ›</h2>
        <div class="info">
          <p>è­°æ¡ˆç¬¬${motionNumber}å·ã‚’å´ä¸‹ã—ã¾ã™ã€‚</p>
          <p>å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚</p>
        </div>
        <div class="form-group">
          <label for="reason">å´ä¸‹ç†ç”±:</label>
          <textarea id="reason" rows="5" placeholder="å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"></textarea>
        </div>
        <button onclick="submitRejection()">å´ä¸‹ã‚’ç¢ºå®š</button>
        <script>
          function submitRejection() {
            const reason = document.getElementById('reason').value.trim();
            if (!reason) {
              alert('å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
              return;
            }
            google.script.run.withSuccessHandler(onSuccess)
              .withFailureHandler(onError)
              .processMotionApproval({
                docId: '${docId}',
                approverEmail: '${email}',
                motionNumber: '${motionNumber}',
                action: 'reject',
                rejectReason: reason,
                token: '${token}'
              });
          }
          function onSuccess(result) {
            if (result.success) {
              document.body.innerHTML = '<h2>å´ä¸‹å®Œäº†</h2><p>' + result.message + '</p>';
            } else {
              alert('ã‚¨ãƒ©ãƒ¼: ' + result.error);
            }
          }
          function onError(error) {
            alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ' + error);
          }
        </script>
      </body>
      </html>
    `;
    return HtmlService.createHtmlOutput(html);
  }

  // æ‰¿èªå‡¦ç†
  const result = processMotionApproval({
    docId: docId,
    approverEmail: email,
    motionNumber: motionNumber,
    action: 'approve',
    token: token
  });

  if (result.success) {
    const html = `
      <!DOCTYPE html>
      <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 20px; text-align: center; }
          h2 { color: #4CAF50; }
        </style>
      </head>
      <body>
        <h2>æ‰¿èªå®Œäº†</h2>
        <p>${result.message}</p>
      </body>
      </html>
    `;
    return HtmlService.createHtmlOutput(html);
  } else {
    return HtmlService.createHtmlOutput('ã‚¨ãƒ©ãƒ¼: ' + result.error);
  }
}

// === ä¸€æ‹¬æ‰¿èªå‡¦ç† ===
function handleBulkApproval(docId, email, token, isApprove) {
  // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
  if (!validateApprovalToken(token, docId, email)) {
    return HtmlService.createHtmlOutput('ç„¡åŠ¹ãªãƒˆãƒ¼ã‚¯ãƒ³ã§ã™ã€‚ãƒªãƒ³ã‚¯ã®æœ‰åŠ¹æœŸé™ãŒåˆ‡ã‚Œã¦ã„ã‚‹å¯èƒ½æ€§ãŒã‚ã‚Šã¾ã™ã€‚');
  }

  const actionText = isApprove ? 'æ‰¿èª' : 'å´ä¸‹';
  const motions = getMotionsByDocId(docId);

  // å´ä¸‹ã®å ´åˆã¯ç†ç”±å…¥åŠ›ãƒ•ã‚©ãƒ¼ãƒ ã‚’è¡¨ç¤º
  if (!isApprove) {
    const html = `
      <!DOCTYPE html>
      <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 20px; max-width: 600px; margin: 0 auto; }
          h2 { color: #333; }
          .form-group { margin: 20px 0; }
          label { display: block; margin-bottom: 5px; font-weight: bold; }
          textarea { width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; }
          button { padding: 10px 20px; background-color: #f44336; color: white; border: none;
                   border-radius: 4px; cursor: pointer; font-size: 16px; }
          button:hover { background-color: #da190b; }
          .info { background-color: #f9f9f9; padding: 15px; border-radius: 5px; margin-bottom: 20px; }
        </style>
      </head>
      <body>
        <h2>å…¨è­°æ¡ˆä¸€æ‹¬å´ä¸‹</h2>
        <div class="info">
          <p>ã™ã¹ã¦ã®è­°æ¡ˆï¼ˆ${motions.length}ä»¶ï¼‰ã‚’ä¸€æ‹¬ã§å´ä¸‹ã—ã¾ã™ã€‚</p>
          <p>å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„ã€‚</p>
        </div>
        <div class="form-group">
          <label for="reason">å´ä¸‹ç†ç”±:</label>
          <textarea id="reason" rows="5" placeholder="å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„"></textarea>
        </div>
        <button onclick="submitRejection()">ã™ã¹ã¦å´ä¸‹ã‚’ç¢ºå®š</button>
        <script>
          function submitRejection() {
            const reason = document.getElementById('reason').value.trim();
            if (!reason) {
              alert('å´ä¸‹ç†ç”±ã‚’å…¥åŠ›ã—ã¦ãã ã•ã„');
              return;
            }
            google.script.run.withSuccessHandler(onSuccess)
              .withFailureHandler(onError)
              .processBulkApproval({
                docId: '${docId}',
                approverEmail: '${email}',
                action: 'reject',
                rejectReason: reason,
                token: '${token}'
              });
          }
          function onSuccess(result) {
            if (result.success) {
              document.body.innerHTML = '<h2>ä¸€æ‹¬å´ä¸‹å®Œäº†</h2><p>' + result.message + '</p>';
            } else {
              alert('ã‚¨ãƒ©ãƒ¼: ' + result.error);
            }
          }
          function onError(error) {
            alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ' + error);
          }
        </script>
      </body>
      </html>
    `;
    return HtmlService.createHtmlOutput(html);
  }

  // ä¸€æ‹¬æ‰¿èªå‡¦ç†
  const result = processBulkApproval({
    docId: docId,
    approverEmail: email,
    action: 'approve',
    token: token
  });

  if (result.success) {
    const html = `
      <!DOCTYPE html>
      <html>
      <head>
        <style>
          body { font-family: Arial, sans-serif; padding: 20px; text-align: center; }
          h2 { color: #4CAF50; }
        </style>
      </head>
      <body>
        <h2>ä¸€æ‹¬æ‰¿èªå®Œäº†</h2>
        <p>${result.message}</p>
      </body>
      </html>
    `;
    return HtmlService.createHtmlOutput(html);
  } else {
    return HtmlService.createHtmlOutput('ã‚¨ãƒ©ãƒ¼: ' + result.error);
  }
}

// === å€‹åˆ¥è­°æ¡ˆã®æ‰¿èªå‡¦ç† ===
function processMotionApproval(params) {
  try {
    const { docId, approverEmail, motionNumber, action, rejectReason, token } = params;

    // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
    if (!validateApprovalToken(token, docId, approverEmail)) {
      throw new Error('ç„¡åŠ¹ãªãƒˆãƒ¼ã‚¯ãƒ³ã§ã™');
    }

    // è­°æ¡ˆæ‰¿èªæƒ…å ±ã‚’MotionApprovalsã‚·ãƒ¼ãƒˆã«è¨˜éŒ²ï¼ˆå¿…è¦ã«å¿œã˜ã¦æ–°ã—ã„ã‚·ãƒ¼ãƒˆã‚’ä½œæˆï¼‰
    const ss = getSpreadsheet();
    let motionApprovalsSheet = ss.getSheetByName('MotionApprovals');
    if (!motionApprovalsSheet) {
      motionApprovalsSheet = ss.insertSheet('MotionApprovals');
      motionApprovalsSheet.getRange(1, 1, 1, 7).setValues([[
        'ãƒ‰ã‚­ãƒ¥ãƒ¡ãƒ³ãƒˆID', 'è­°æ¡ˆç•ªå·', 'æ‰¿èªè€…ãƒ¡ãƒ¼ãƒ«', 'æ‰¿èªçŠ¶æ…‹', 'å´ä¸‹ç†ç”±', 'æ‰¿èªæ—¥æ™‚', 'å‚™è€ƒ'
      ]]);
    }

    // æ‰¿èªè¨˜éŒ²ã‚’è¿½åŠ 
    motionApprovalsSheet.appendRow([
      docId,
      motionNumber,
      approverEmail,
      action === 'approve' ? 'æ‰¿èª' : 'å´ä¸‹',
      rejectReason || '',
      new Date(),
      `è­°æ¡ˆ${motionNumber}ã‚’å€‹åˆ¥${action === 'approve' ? 'æ‰¿èª' : 'å´ä¸‹'}`
    ]);

    // ç›£æŸ»ãƒ­ã‚°
    const actionText = action === 'approve' ? 'æ‰¿èª' : 'å´ä¸‹';
    addAuditLog('PROCESS_MOTION_APPROVAL', docId,
      `è­°æ¡ˆ${motionNumber} ${actionText}: ${approverEmail}`, true);

    return {
      success: true,
      message: `è­°æ¡ˆç¬¬${motionNumber}å·ã‚’${actionText}ã—ã¾ã—ãŸ`
    };

  } catch (error) {
    console.error('è­°æ¡ˆæ‰¿èªå‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('PROCESS_MOTION_APPROVAL_ERROR', params.docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}

// === ä¸€æ‹¬æ‰¿èªå‡¦ç† ===
function processBulkApproval(params) {
  try {
    const { docId, approverEmail, action, rejectReason, token } = params;

    // ãƒˆãƒ¼ã‚¯ãƒ³æ¤œè¨¼
    if (!validateApprovalToken(token, docId, approverEmail)) {
      throw new Error('ç„¡åŠ¹ãªãƒˆãƒ¼ã‚¯ãƒ³ã§ã™');
    }

    // ã™ã¹ã¦ã®è­°æ¡ˆã‚’å–å¾—
    const motions = getMotionsByDocId(docId);

    if (motions.length === 0) {
      throw new Error('æ‰¿èªå¯¾è±¡ã®è­°æ¡ˆãŒã‚ã‚Šã¾ã›ã‚“');
    }

    // å„è­°æ¡ˆã«å¯¾ã—ã¦æ‰¿èªå‡¦ç†ã‚’å®Ÿè¡Œ
    let successCount = 0;
    let failureCount = 0;

    motions.forEach(motion => {
      const result = processMotionApproval({
        docId: docId,
        approverEmail: approverEmail,
        motionNumber: motion.motionNumber,
        action: action,
        rejectReason: rejectReason,
        token: token
      });

      if (result.success) {
        successCount++;
      } else {
        failureCount++;
      }
    });

    // å…¨ä½“ã®æ‰¿èªã‚‚å‡¦ç†ï¼ˆApproversã‚·ãƒ¼ãƒˆã¸ã®è¨˜éŒ²ï¼‰
    const overallResult = processApproval({
      docId: docId,
      approverEmail: approverEmail,
      action: action,
      rejectReason: rejectReason,
      token: token
    });

    // ç›£æŸ»ãƒ­ã‚°
    const actionText = action === 'approve' ? 'ä¸€æ‹¬æ‰¿èª' : 'ä¸€æ‹¬å´ä¸‹';
    addAuditLog('PROCESS_BULK_APPROVAL', docId,
      `${actionText}: ${approverEmail} (æˆåŠŸ${successCount}ä»¶/å¤±æ•—${failureCount}ä»¶)`, true);

    return {
      success: true,
      message: `${motions.length}ä»¶ã®è­°æ¡ˆã‚’${actionText}ã—ã¾ã—ãŸï¼ˆæˆåŠŸ: ${successCount}ä»¶ï¼‰`
    };

  } catch (error) {
    console.error('ä¸€æ‹¬æ‰¿èªå‡¦ç†ã‚¨ãƒ©ãƒ¼:', error);
    addAuditLog('PROCESS_BULK_APPROVAL_ERROR', params.docId, error.toString(), false);
    return {
      success: false,
      error: error.toString()
    };
  }
}
